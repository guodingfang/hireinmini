.word-wrap-line2 {
	overflow: hidden;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	word-break: break-all;
}

/* 标题样式 */
.title_box {
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid #f0f0f0;
	font-size: 32rpx;
	position: relative;
	background: #fff;
	padding: 0 30rpx;
}

.title_box::before {
	content: '';
	width: 8rpx;
	height: 40rpx;
	background: #df9e12;
	position: absolute;
	top: 20rpx;
	left: 15rpx;
	border-radius: 10rpx;
}

.title_box text {
	float: right;
	color: #47acf0;
	font-size: 30rpx;
}

/* 圆角矩形 */
.rectangle_radius {
	margin: 30rpx;
	background: #fff;
	border-radius: 10rpx;
	border: 1px solid #ececec;
}