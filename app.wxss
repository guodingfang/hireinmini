/* 生成图片 */
.share-wrap {
	overflow: hidden;
}

.share-wrap .canvas {
	width: 96%;
	height: 400px;
	margin: 0 auto;
	background: #fff;
	position: fixed;
	top: 0;
	left: 800px;
}

.share-wrap .share {
	position: absolute;
	bottom: 100rpx;
	width: 70%;
	left: 15%;
	height: 100rpx;
	line-height: 100rpx;
}

.share-wrap .icon-save {
	width: 32rpx;
	height: 32rpx;
}

.share-wrap .preview {
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.8);
	position: fixed;
	top: 0;
	left: 0;
	z-index: 101;
}

.share-wrap .preview .makeimg {
	width: 80%;
	position: fixed;
	top: 15%;
	left: 10%;
	z-index: 1000;
	border-radius: 14rpx;
	max-height: 800rpx;
}

.share-wrap .preview .btn-save {
	width: 30%;
	position: absolute;
	bottom: 150rpx;
	left: 35%;
	background: #d43d3d;
	text-align: center;
	color: #fff;
	padding: 20rpx 10rpx;
	border-radius: 40rpx;
}

.share-wrap .btn-save .icon-save {
	margin-right: 8rpx;
	position: relative;
	top: 6rpx;
}

.icon-video {
	width: 80rpx;
	height: 80rpx;
	position: absolute;
	z-index: 11;
	top: 50%;
	left: 50%;
	margin-left: -40rpx;
	margin-top: -40rpx;
}

