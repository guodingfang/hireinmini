.no-info {
	padding-bottom: 30rpx;
	text-align: center;
}

.no-info-img {
	padding-top: 100rpx;
	width: 380rpx;
	height: 300rpx;
}

/* 遮罩 */

.shade {
	position: fixed;
	top: 0;
	right: 0;
	z-index: 999998;
	background: #000;
	width: 100%;
	height: 100%;
	filter: alpha(Opacity=50);
	-moz-opacity: 0.5;
	opacity: 0.5;
}

