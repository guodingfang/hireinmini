@import "/common/lib/iconfont.wxss";

page {
	background: #f0f0f0;
	font-size: 30rpx;
	font-family: "simhei";
	color: #333;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
	width: 0;
	height: 0;
	color: transparent;
}

.posi_r {
	position: relative;
}

.container {
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	padding: 200rpx 0;
	box-sizing: border-box;
}

.hide {
	display: none;
}

.flex.hide {
