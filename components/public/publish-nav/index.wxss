@import '/assets/style/animate.wxss';

.container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 99999;
}

.model {
  position: absolute;
  bottom: 0;
  background-color: #FFFFFF;
  width: 100vw;
  height: 360rpx;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav {
  width: 100%;
  display: flex;
  padding: 50rpx 20rpx 0;
  box-sizing: border-box;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-icon {
  width: 64rpx;
  height: 70rpx;
}


.icon-close {
  margin-top: 60rpx;
  width: 68rpx;
  height: 68rpx;
}