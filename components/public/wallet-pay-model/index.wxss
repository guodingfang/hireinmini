@import '/assets/style/animate.wxss';

.container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 99999;
  display: flex;
}

.model {
  margin: 250rpx auto auto auto;
  background-color: #FFFFFF;
  border-radius: 26rpx;
  width: 640rpx;
}

.model-header {
  position: relative;
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: center;
  color: #666666;
  font-size: 30rpx;
  font-weight: bold;
  border-bottom: 0.5rpx solid #E5E5E5;
}

.model-header>image {
  position: absolute;
  top: 0;
  right: 0;
  width: 24rpx;
  height: 24rpx;
  padding: 28rpx;
}

.model-content {
  position: relative;
  margin: 40rpx 0;
}

.num-list {
  margin: 0 58rpx;
  display: flex;
}

.input-container {
  position: absolute;
  top: 0;
  left: 58rpx;
  right: 58rpx;
  height: 90rpx;
  overflow: hidden;
}

.input-num {
  position: absolute;
  right: 0;
  height: 100%;
  width: 2000%;
  font-size: 0 !important;
  color: transparent;
  text-shadow: 0 0 0 red;
  /* border: 1rpx solid #E5E5E5; */
}

.num-item {
  width: 86rpx;
  height: 86rpx;
  line-height: 86rpx;
  text-align: center;
  border: 2rpx solid #E5E5E5;
  border-right: none;
  color: #666666;
  font-size: 40rpx;
}

.num-item:last-child {
   border-right: 2rpx solid #E5E5E5;
}

.model-footer {
  margin-top: -40rpx;
  display: flex;
  color: #999999;
  font-size: 24rpx;
  justify-content: space-between;
  flex-direction: row-reverse;
  padding: 12rpx 58rpx;
}

.footer-btn {
  padding: 12rpx;
}