
.footer {
  display: flex;
  justify-content: space-between;
  height: 40rpx;
}

.footer-item, .footer-item .info-share-content {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  /* flex-direction: column; */
}

.info-comment {
  margin-left: 0;
}

.footer-item .info-share-content {
  padding: 0;
  background-color: transparent;
  border: 0rpx solid transparent;
}

.footer-item .info-share-content::after{
  border: 0rpx solid transparent;
}

.footer-item .footer-item-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.footer-item .footer-item-label {
  flex: 1;
  color: #999999;
  font-size: 24rpx;
  max-width: 60rpx;
  text-align: left;
}

.footer-item.info-phone {
  margin-left: auto;
}

.footer-item.info-phone .footer-item-label{
  color: #1A1A1A
}