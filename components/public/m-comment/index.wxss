.comment {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9999999999;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 60;
  background-color: rgba(0, 0, 0, .7);
}

.form-info {
  width: 750rpx;
  min-height: 80rpx;
  position: fixed;
  z-index: 100;
  background-color: #ffffff;
  display: flex;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.comment-input {
  flex: 1;
  margin: auto;
  background-color: #F5F4F9;
  border-radius: 12rpx;
  font-size: 28rpx;
  height: 144rpx;
  margin: 20rpx 0 20rpx 30rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.send-btn {
  color: #0400E6;
  padding: 0;
  margin: 12rpx auto;
  padding: 0 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
}

.comment-input-pl {
  font-size: 28rpx;
}