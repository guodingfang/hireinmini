.comment {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 50;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 60;
  background-color: rgba(0, 0, 0, .7);
}

.form-info {
  width: 750rpx;
  min-height: 80rpx;
  position: fixed;
  bottom: 0;
  z-index: 100;
  background-color: #ebebeb;
  display: flex;
  padding: 0 12rpx;
  box-sizing: border-box;
}

.comment-input {
  flex: 1;
  margin: auto;
}

.send-btn {
  color: #ffffff;
  background: #d43d3d;
  padding: 0;
  margin: 12rpx auto;
  padding: 0 12rpx;
  text-align: center;
  height: 66rpx;
  line-height: 66rpx;
  border-radius: 6rpx;
  font-size: 30rpx;
}