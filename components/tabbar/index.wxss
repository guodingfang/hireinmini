.tabber-container {
  position: fixed;
  height: 100rpx;
  bottom: 0;
  display: flex;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  text-align: center;
  font-size: 22rpx;
  z-index: 999;
  background: #FFFFFF;
  box-shadow: 0px 0px 20rpx rgba(4, 0, 230, 0.2);  
}

.tab-item {
  position: relative;
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  background: #FFFFFF;
}

.tab-item::after {
  content: '';
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  bottom: 40rpx;
  border-radius: 50%;
  background-color: #FFFFFF;
  z-index: -1;
}

.tab-item-select::after {
  transition: all 0.1s ease-in;
  content: '';
  width: 100rpx;
  height: 100rpx;
  bottom: 25rpx;
  box-shadow: 0px 0px 20px rgba(4, 0, 230, 0.2);
}

.tab-icon {
  width: 50rpx;
  height: 50rpx;
  /* border-radius: 50%; */
}

.tab-icon-custom {
  border-radius: 36rpx;
}

.tab-item-select .tab-icon {
  transition: all 0.15s ease-in;
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  bottom: 40rpx;
  border-radius: 50%;
}

.item-text {
  /* display: none; */
}

.tab-item-select .item-text {
  display: block;
  position: absolute;
  height: 28rpx;
  bottom: 8rpx;
}