@import '../common.wxss';

.rate-list {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
}

.rate-item {
  background-color: #F5F5F5;
  width: 198rpx;
  height: 60rpx;
  color: #666666;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
}

.select-rate-item {
  background-color: #E6EDFF;
  color: #0400E6;
  font-weight: bold;
}

.size, .projection {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.size-input {
  width: 630rpx;
}

.projection-item {
  flex: 1;
  display: flex;
  align-items: center;
}

.label {
  white-space: nowrap;
}

.icon-transition {
  width: 24rpx;
  height: 20rpx;
  margin: 0 8rpx;
}

.input-item-distance {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  height: 100rpx;
  box-sizing: border-box;
}

.result-row-middle {
  margin-top: 20rpx;
}

.result-row-middle .result-col {
  padding-bottom: 0;
}