
.item {
  width: 300rpx;
  height: 430rpx;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  background-color: #ffffff;
}

.img {
  width: 300rpx;
  height: 430rpx;
}

.info {
  position: absolute;
  bottom: 0;
  height: 138rpx;
  width: 100%;
  background: linear-gradient(180deg, rgba(26, 26, 26, 0.4) 0%, #000000 100%);
  display: flex;
  flex-direction: column;
  padding: 6rpx 10rpx 15rpx 10rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.name {
  color: #FFFFFF;
  font-size: 26rpx;
  font-weight: bold;
}

.explain {
  margin-top: 4rpx;
  color: #999999;
  font-size: 20rpx;
  margin-bottom: auto;
}

.price-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  display: flex;
  align-items: baseline;
}

.btn {
  width: 82rpx;
  height: 56rpx;
  position: relative;
  bottom: -15rpx;
  right: -10rpx;
}