@import '/assets/style/global.wxss';

.comment {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 30rpx;
}

.title {
  font-size: 40rpx;
  color: #1A1A1A;
  font-weight: bold;
  line-height: 60rpx;
}

.label {
  margin-left: 10rpx;
  height: 30rpx;
  padding: 0 10rpx;
  font-size: 18rpx;
  display: inline-flex;
  align-items: center;
  border-radius: 8rpx;
  font-weight: 400;
}

.label-my {
  color: #0400E6;
  background-color: #E6EDFF;
  margin-left: 0rpx;
  margin-right: 4rpx;
}

.label-solve,
.label-reward {
  background-color: #FFEDE6;
  color: #FF9D73;
}

.label-solve,
.label-my {
  position: relative;
  top: -6rpx;
}

.label-reward-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.content {
  display: flex;
  flex-direction: column;
  padding: 12rpx 0;
}

.content-val {
  position: relative;
  color: #333333;
  font-size: 28rpx;
}

.more {
  height: 40rpx;
  padding: 0 10rpx;
  background: linear-gradient(270deg, #F2F2F2 0%, #F2F2F2 73%, rgba(242, 242, 242, 0.1) 100%);
  border-radius: 40rpx;
  color: #012ae3;
  font-size: 24rpx;
  display: inline-flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.more .icon-more {
  margin-left: 12rpx;
  width: 16rpx;
  height: 24rpx;
}

.files {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.file-item {
  width: 690rpx;
  height: 388rpx;
}

.m-video {
  width: 690rpx;
  height: 388rpx;
}

.share {
  margin-left: auto;
}

.share-btn {
  border: 0 solid transparent;
  background-color: transparent;
  display: flex;
  align-items: center;
  color: #333333;
  font-size: 24rpx;
  padding: 0 12rpx;
}

.share-btn::after{
  border: 0;
}

.icon-share {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.reward {
  margin-left: auto;
  display: flex;
  align-items: center;
  height: 70rpx;
}

.icon-reward {
  width: 32rpx;
  height: 32rpx;
}

.reward-text {
  color: #FF9D73;
  font-size: 24rpx;
  margin-left: 4rpx;
}

.reward-text.reward-not-text {
  color: #999999;
}