<view class="comment">
  <view class="title two-row-overstep" wx:if="{{title}}">{{ title }}</view>
  <view class="user-info" wx:if="{{userInfo}}">
    <image class="head-portrait" src="/images/public/logo.png"></image>
    <view class="user">
      <view class="name">韩小颖</view>
      <view class="created">2021.11.26 18:50</view>
    </view>
  </view>
  <view class="content">
    <view class="content-val">
      {{ content }}
      <view class="more">
        查看全部<image class="icon-more" src="/images/icon/more.png"></image>
      </view>
    </view>
    <view class="files">
      <block wx:key="id" wx:for="{{imgList}}">
        <image
          mode="widthFix"
          class="file-item"
          src="{{imgUrl}}{{item.picurl}}"
        ></image>
      </block>
      <block wx:if="{{video}}">
        <image
          mode="widthFix"
          class="file-item"
          src="{{videoUrl}}{{video.videourl}}?x-oss-process=video/snapshot,t_1000,f_jpg,w_{{video.width}},h_{{video.height}},m_fast"
        ></image>
      </block>
    </view>
  </view>
</view>