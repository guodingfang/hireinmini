@import '/assets/style/global.wxss';
.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.head-portrait {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.head-portrait.small {
  width: 64rpx;
  height: 64rpx;
}

.user {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.user.small-user .name {
  font-size: 24rpx;
  width: 420rpx;
}

.user .name {
  color: #1A1A1A;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  width: 440rpx;
}

.label {
  margin-left: 10rpx;
  height: 30rpx;
  padding: 0 10rpx;
  font-size: 18rpx;
  display: inline-flex;
  align-items: center;
  border-radius: 8rpx;
  font-weight: 400;
}

.label-answer {
  background-color: #E6FFF5;
  color: #45E6A7;
}

.label-my {
  color: #0400E6;
  background-color: #E6EDFF;
}

.label-solve,
.label-reward {
  background-color: #FFEDE6;
  color: #FF9D73;
}

.label-reward-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.created {
  font-size: 24rpx;
  color: #666666;
}

.btn {
  margin-left: auto;
}

.share-btn {
  border: 0 solid transparent;
  background-color: transparent;
  display: flex;
  align-items: center;
  color: #333333;
  font-size: 24rpx;
  padding: 0 12rpx;
}

.share-btn::after{
  border: 0;
}

.icon-share {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}