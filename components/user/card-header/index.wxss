.card {
  display: flex;
  background: #50c4ff;
  padding: 24rpx;
}

.portrait {
  width: 120rpx;
  height: 120rpx;
  border: 6rpx solid #fff;
  border-radius: 70rpx;
  margin-right: 24rpx;
  overflow: hidden;
}

.portrait-img {
  width: 100%;
  height: 100%;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.content {
  display: flex;
  align-items: center;
}

.username {
  font-size: 38rpx;
}

.info-data {
  display: flex;
  justify-content: space-between;
}

.data-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}