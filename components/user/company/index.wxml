<view class="company">
  <m-header title="我的公司" m-header="m-header" />
  <view class="list">
    <view class="item" data-type="order" bind:tap="onSkip">
      <image class="icon" src="/images/user/company-order.png">
        <text class="num" wx:if="{{notPayAmount > 0}}">{{notPayAmount}}</text>
      </image>
      <text class="label">订单</text>
    </view>
    <view class="item" bind:tap="onSkip">
      <image class="icon" src="/images/user/company-users.png"></image>
      <text class="label">客户</text>
    </view>
    <view class="item" data-type="complete" bind:tap="onSkip">
      <image class="icon" src="/images/user/company-deal.png"></image>
      <text class="label">成交</text>
    </view>
    <view class="item" bind:tap="onSkip">
      <image class="icon" src="/images/user/company-finance.png"></image>
      <text class="label">财务</text>
    </view>
  </view>
</view>