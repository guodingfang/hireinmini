
.knowledge {
  width: 335rpx;
  height: 408rpx;
  border-radius: 30rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}

.m-header {
  padding: 20rpx !important;
  height: 83rpx !important;
}

.model {
  width: 295rpx;
  height: 164rpx;
  background-color: #F7F7F7;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx;
  box-sizing: border-box;
  margin: auto;
  border-radius: 12rpx;
}

.title {
  color: #1A1A1A;
  font-size: 30rpx;
  font-weight: bold;
}

.btn {
  width: 136rpx;
  height: 48rpx;
  background-color: #FFEED9;
  color: #FFA12C;
  font-size: 24rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 12rpx;
}

.list {
  margin-top: 20rpx;
  display: flex;
}

.item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  width: 78rpx;
  height: 78rpx;
}

.label {
  font-size: 24rpx;
  color: #666666;
  margin-top: 10rpx;
}