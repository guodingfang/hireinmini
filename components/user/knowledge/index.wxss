
.container {
  width: 335rpx;
  height: 408rpx;
  position: relative;
  border-radius: 30rpx;
  overflow: hidden;
}

.knowledge {
  width: 335rpx;
  height: 408rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  filter: blur(8rpx);
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 2rpx 10rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
  margin: auto;
  background: rgba(0, 0, 0, .05);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.mask-tips {
  font-family: LiHei Pro Medium;
  color: rgb(1, 42, 227);
  font-size: 32rpx;
  font-weight: bold;
}

.m-header {
  padding: 20rpx !important;
  height: 83rpx !important;
}

.model {
  width: 295rpx;
  height: 164rpx;
  background-color: #F7F7F7;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx;
  box-sizing: border-box;
  margin: auto;
  border-radius: 12rpx;
}

.title {
  color: #1A1A1A;
  font-size: 30rpx;
  font-weight: bold;
}

.btn {
  width: 136rpx;
  height: 48rpx;
  background-color: #FFEED9;
  color: #FFA12C;
  font-size: 24rpx;
  line-height: 48rpx;
  text-align: center;
  border-radius: 12rpx;
}

.list {
  margin-bottom: 12rpx;
  display: flex;
}

.item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  width: 78rpx;
  height: 78rpx;
}

.label {
  font-size: 24rpx;
  color: #666666;
  margin-top: 10rpx;
}