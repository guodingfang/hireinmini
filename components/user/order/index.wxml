<view class="order">
  <m-header title="商品订单" />
  <view class="list goods-list">
    <view class="item" data-type="0" bind:tap="onSkipOrder">
      <image class="icon" src="/images/user/goods-complete.png">
        <text class="num">99</text>
      </image>
      <text class="label">待付款</text>
    </view>
    <view class="item" data-type="1" bind:tap="onSkipOrder">
      <image class="icon" src="/images/user/goods-not-payment.png"></image>
      <text class="label">已付款</text>
    </view>
    <view class="item" data-type="2" bind:tap="onSkipOrder">
      <image class="icon" src="/images/user/goods-complete.png">
        <text class="num">5</text>
      </image>
      <text class="label">已完成</text>
    </view>
  </view>

  <m-header title="租赁订单" bgColor="yellow" />
  <view class="list">
    <view class="item" data-type="0" bind:tap="onSkipOrder">
      <image class="icon" src="/images/user/lease-not-payment.png"></image>
      <text class="label">待付款</text>
    </view>
    <view class="item" data-type="1" bind:tap="onSkipOrder">
      <image class="icon" src="/images/user/lease-payment.png"></image>
      <text class="label">已付款</text>
    </view>
    <view class="item" data-type="2" bind:tap="onSkipOrder">
      <image class="icon" src="/images/user/lease-complete.png"></image>
      <text class="label">已完成</text>
    </view>
    <view class="item" data-type="3" bind:tap="onSkipOrder">
      <image class="icon" src="/images/user/lease-refund.png">
        <text class="num" wx:if="{{ordernumbers}}">{{ordernumbers}}</text>
      </image>
      <text class="label">退款</text>
    </view>
  </view>
</view>