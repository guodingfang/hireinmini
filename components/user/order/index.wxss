@import "/common/lib/iconfont.wxss";

.order {
  background-color: #ffffff;
  border-radius: 30rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding-bottom: 20rpx;
  height: 230rpx;
}

.list {
  display: flex;
  justify-content: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.item {
  flex: 0 0 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: space-between;
  height: 100rpx;
}

.goods-list .item {
  margin-right: 25rpx;
}

.icon {
  position: relative;
  width: 60rpx;
  height: 60rpx;
  overflow: visible !important;
}

.label {
  margin-top: 14rpx;
  font-size: 24rpx;
  color: #666666;
}

.num{
  position: absolute;
  background-color:#ffffff;
  border-radius: 12rpx;
  right: -8rpx;
  top: -8rpx;
  min-width: 24rpx;
  padding: 0 6rpx;
  height: 24rpx;
  display: block;
  text-align: center;
  line-height: 24rpx;
  color: #FF4545;
  font-family: "黑体";
  border: 1rpx solid #FF4545;
  font-size: 20rpx;
  box-sizing: border-box;
}