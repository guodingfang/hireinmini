<view class="model">
  <view
    wx:for="{{list}}"
    wx:key="id"
    class="item"
    data-id="{{item.id}}"
    bind:tap="onSkipAskDetails"
  >

    <view class="title single-row-overstep">{{item.qatitle}}</view>

    <view class="content">
      <text class="tips">{{item.answernum}}个回答</text>
      <view class="edit-btn" data-id="{{item.id}}" catch:tap="onSkipAnswer">
        <image class="icon-edit" src="/images/icon/edit-2.png"></image>
        <text>写回答</text>
      </view>
    </view>
  </view>
</view>