.card {
  width: 690rpx;
  background-color: #FFFFFF;
  border-radius: 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin: auto;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, .1)
}

.header {
  display: flex;
  align-items: center;
}

.portrait {
  margin-left: 10rpx;
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
}

.btn {
  width: 223rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  border-radius: 27rpx;
  font-size: 24rpx;
  margin-left: 20rpx;
}


.btn-1 {
  color: #1A1A1A;
  border: 1rpx solid #707070;
}

.btn-2 {
  background-color: #FFEED9;
  color: #FFA12C;
}

.introduce {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.user-name {
  color: #1A1A1A;
  font-size: 40rpx;
  font-weight: bold; 
  margin-bottom: 20rpx;
}

.introduce-val, .company {
  color: #1A1A1A;
  font-size: 22rpx;
  height: 30rpx;
  line-height: 30rpx;
}

.company {
  margin-top: 4rpx;
}

.popularity-list {
  display: flex;
  height: 70rpx;
  margin: 30rpx -20rpx 0 -20rpx;
}

.item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  color: #1A1A1A;
  font-size: 22rpx;
  margin-bottom: 6rpx;
}

.val {
  color: #1A1A1A;
  font-size: 28rpx;
  font-weight: bold;
}

.advert {
  margin-top: 30rpx;
}