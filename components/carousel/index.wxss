.carousel {
  position: relative;
}

.carousel-content {
  width: 100%;
  height: 100%;
}

.carousel-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.carousel-img {
  width: 100%;
  height: 100%;
}

.indicator {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  width: 200rpx;
  height: 10rpx;
  margin: auto;
  display: flex;
}

.indicator-item {
  flex: 1;
  background-color: rgba(255, 255, 255, .3);
}

.current-indicator-item {
  background-color: rgba(255, 255, 255, .7);
}