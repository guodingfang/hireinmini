.carousel {
  position: relative;  
}

.carousel-content {
  width: 100%;
  height: 100%;
}

.carousel-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.carousel-img {
  width: 100%;
  height: 100%;
}

.num {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  z-index: 1;
  color: #ffffff;
  font-size: 20rpx;
  min-width: 60rpx;
  height: 30rpx;
  background: #01000A;
  opacity: 0.6;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 13rpx;
  box-sizing: border-box;
}