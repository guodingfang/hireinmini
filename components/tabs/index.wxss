
.tabs {
  display: flex;
  border-bottom: 1rpx solid #E5E5E5;
  overflow: hidden;
}

.tab-item {
  position: relative;
  padding: 0 28rpx;
  white-space: nowrap;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color--);
  z-index: 99;
}

.tab-item-select {
  color: var(--selectColor--);
  font-weight: bold;
  position: relative;
  font-size: 36rpx;
}

.tab-item-select::after {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  content: '';
  width: 40rpx;
  height: 6rpx;
  background-color: var(--borderColor--);
}

.tips {
  position: absolute;
  top: 0;
  right: 0;
  z-index: -1;
}

.icon-vip {
  width: 60rpx;
  height: 50rpx;
}

.tabs-content {
  height: calc(100vh - var(--tabHeight--));
  overflow: hidden;
  margin: 0;
  padding: 0;
}

.tabs-scroll-item {
  height: calc(100vh - var(--tabHeight--));
  overflow: hidden;
  margin: 0;
  padding: 0;
}