@import "/common/lib/iconfont.wxss";
.model {
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  margin: 0 24rpx;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.model .header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
}

.model .header .title {
  position: relative;
  font-size: 36rpx;
  color: #333333;
  padding-left: 12rpx;
}

.header .title::after {
  content: '';
  position: absolute;
  left: 0;
  width: 6rpx;
  height: 100%;
  border-radius: 6rpx;
  background-color: tomato;
}

.model .header .more {
  font-size: 26rpx;
  color: #666666;
}

.info-item {
  display: flex;
  padding: 24rpx;
}

.item-img {
  width: 200rpx;
  height: 160rpx;
  margin-right: 24rpx;
}

.item-content {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.item-label {
  font-size: 36rpx;
  color: #333333;
}

.item-val {
  font-size: 28rpx;
  color: #666666;
}