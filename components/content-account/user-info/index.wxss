@import "/assets/style/global.wxss";

.card {
  position: relative;
  width: 710rpx;
  height: 380rpx;
  background-color: #FFFFFF;
  border-radius: 30rpx;
  padding: 20rpx 40rpx 30rpx 40rpx;
  box-sizing: border-box;
  margin: auto;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, .1)
}

.header {
  position: absolute;
  top: -52rpx;
  display: flex;
  align-items: flex-end;
}

.portrait-container {
  position: relative;
  width: 136rpx;
  height: 136rpx;
}

@keyframes admin {
  0% {
    border: 6rpx solid #ff0000;
    transform: scale(1, 1);
  }
  60% {
    border: 2rpx solid #fc7676;
    transform: scale(1.1, 1.1);
  }
  100% {
    border: .5rpx solid transparent;
    transform: scale(1.15, 1.15);
  }
}
