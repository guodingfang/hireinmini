
.min-video {
  width: 225rpx;
  height: 300rpx;
  position: relative;
  margin-bottom: 8rpx;
}

.video-img {
  width: 225rpx;
  height: 300rpx;
}

.operation {
  position: absolute;
  display: flex;
  align-items: center;
  bottom: 0;
  width: 225rpx;
  height: 50rpx;
  background: linear-gradient(180deg, rgba(26, 26, 26, 0) 0%, rgba(0, 0, 0, 0.8) 100%);
  padding-left: 20rpx;
  box-sizing: border-box;
}

.icon-play {
  width: 32rpx;
  height: 30rpx;
}

.play-num {
  margin-left: 4rpx;
  font-size: 22rpx;
  color: #ffffff;
}