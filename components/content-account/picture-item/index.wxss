@import '/assets/style/global.wxss';

.item {
  position: relative;
  background-color: #ffffff;
  padding: 0 30rpx 20rpx 30rpx;
}

.item::after {
  content: '';
  position: absolute;
  width: 690rpx;
  height: 1rpx;
  background-color: #E5E5E5;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  z-index: 1;
}

.info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10rpx;
}

.content {
  width: 100%;
  color: #1A1A1A;
  font-size: 30rpx;
  line-height: 44rpx;
}


.picture {
  margin-top: 20rpx;
  position: relative;
  width: 690rpx;
  height: 388rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.big-img {
  width: 100%;
  height: 100%;
}