@import "/assets/style/global.wxss";
.item {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 25rpx;
}

.header {
  display: flex;
}

.portrait {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 15rpx;
}

.username {
  color: #1A1A1A;
  font-size: 30rpx;
  font-weight: bold;
  max-width: 515rpx;
}

.explain {
  display: flex;
  font-size: 26rpx;
}

.time {
  color: #999999;
  font-size: 24rpx;
  padding-right: 20rpx;
}

.company {
  color: #0400E6;
  max-width: 350rpx;
}

.status {
  margin: auto;
  width: 133rpx;
  height: 50rpx;
  font-size: 24rpx;
  color: #FFA12C;
  background-color: #FFEED9;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
}

.content {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
}

.content-info {
  line-height: 44rpx;
  color: #1A1A1A;
  font-size: 30rpx;
  word-break: break-all;
}

.imgs {
  align-self: flex-start;
  width: 100%;
  max-width: 700rpx;
  display: flex;
  margin: 15rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.big-img {
  width: 100%;
  height: 388rpx;
  border-radius: 20rpx;
}

.small-img {
  position: relative;
  width: 33%;
  height: 160rpx;
  box-sizing: border-box;
}

.small-img:not(:first-child) {
  margin-left: 10rpx;
}

.imgs .mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  position: absolute;
  top: 0;
  right: 0;
  font-size: 54rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.big-video {
  width: 700rpx;
  height: 360rpx;
}

.video-mask {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .2);
}

.play-icon {
  position: absolute;
  font-size: 100rpx;
  color: #999999;
  top: 90rpx;
  left: 300rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  height: 40rpx;
}

.footer-item, .footer-item .info-share-content {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  /* flex-direction: column; */
}

.footer-item .info-share-content {
  padding: 0;
  background-color: transparent;
  border: 0rpx solid transparent;
}

.footer-item .info-share-content::after{
  border: 0rpx solid transparent;
}

.footer-item .footer-item-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.footer-item .footer-item-label {
  flex: 1;
  color: #999999;
  font-size: 24rpx;
  max-width: 60rpx;
  text-align: left;
}

.footer-item.info-phone {
  margin-left: auto;
}

.footer-item.info-phone .footer-item-label{
  color: #1A1A1A
}