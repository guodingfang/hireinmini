@import "/assets/style/global.wxss";
.item {
  position: relative;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 30rpx;
}

.middle-line {
  width: 690rpx;
  height: .5rpx;
  background-color: #e5e5e5;
  margin: 0 auto;
}

.header {
  display: flex;
}

.portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 15rpx;
}

.username {
  color: #1A1A1A;
  font-size: 24rpx;
  font-weight: bold;
  max-width: 515rpx;
}

.explain {
  display: flex;
  font-size: 26rpx;
}

.time {
  color: #999999;
  font-size: 24rpx;
  padding-right: 20rpx;
}

.company {
  color: #666666;
  max-width: 350rpx;
  font-size: 20rpx;
}

.content {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
}

.content-info {
  line-height: 44rpx;
  color: #1A1A1A;
  font-size: 32rpx;
  word-break: break-all;
}

.imgs {
  align-self: flex-start;
  width: 100%;
  max-width: 700rpx;
  display: flex;
  margin: 15rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.big-img {
  width: 100%;
  height: 388rpx;
  border-radius: 20rpx;
}

.small-img {
  position: relative;
  width: 33%;
  height: 160rpx;
  box-sizing: border-box;
}

.small-img:not(:first-child) {
  margin-left: 10rpx;
}

.imgs .mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  position: absolute;
  top: 0;
  right: 0;
  font-size: 54rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.video-mask {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .2);
}

.icon-play {
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
}
