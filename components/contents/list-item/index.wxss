@import '/common/lib/iconfont.wxss';
.item {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 25rpx;
}

.header {
  display: flex;
}

.portrait {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.header-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 15rpx;
}

.username {
  color: #576b95;
  font-size: 32rpx;
  max-width: 515rpx;
}

.explain {
  display: flex;
  font-size: 26rpx;
}

.time {
  color: #8f8f8f;
}

.company {
  color: #576b95;
  padding-left: 20rpx;
}

.status {
  color: #ffb426;
}

.content {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
}

.content-info {
  line-height: 44rpx;
  color: #3d3d3d;
  font-size: 32rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.imgs {
  align-self: flex-start;
  width: 100%;
  max-width: 700rpx;
  display: flex;
  margin: 15rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

.big-img {
  width: 100%;
  height: 360rpx;
}

.small-img {
  position: relative;
  width: 33%;
  height: 190rpx;
  box-sizing: border-box;
}

.small-img:not(:first-child) {
  margin-left: 10rpx;
}

.imgs .mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  position: absolute;
  top: 0;
  right: 0;
  font-size: 54rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.big-video {
  width: 700rpx;
  height: 360rpx;
}

.video-mask {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .2);
}

.play-icon {
  position: absolute;
  font-size: 100rpx;
  color: #999999;
  top: 90rpx;
  left: 300rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  height: 40rpx;
}

.footer-item, .footer-item .info-share-content {
  display: flex;
  align-items: center;
  justify-content: center;
  /* flex-direction: column; */
}

.footer-item .info-share-content {
  padding: 0;
  background-color: transparent;
  border: 0rpx solid transparent;
}

.footer-item .info-share-content::after{
  border: 0rpx solid transparent;
}

.footer-item .footer-item-icon {
  width: 28rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.footer-item .footer-item-label {
  flex: 1;
  color: #576b95;
  font-size: 28rpx;
}

.footer-item .icon-dial {
  width: 30rpx;
  height: 30rpx;
}

.footer-item .icon-browse {
  width: 36rpx;
  height: 24rpx;
}