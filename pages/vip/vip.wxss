.content {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.type-btn {
  width: 690rpx;
  height: 100rpx;
  background: #F5F4F9;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
}

.type-btn-item {
  color: #1A1A1A;
  font-size: 34rpx;
  font-weight: bold;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.type-select-vip {
  height: 90rpx;
  color: #FFA12C;
  background: #FFFFFF;
  border: 2rpx solid #E7E4F2;
  box-shadow: 0 0 10rpx #C3BED5;
  border-radius: 50rpx;
}

.type-select-company-vip {
  height: 90rpx;
  background: linear-gradient(180deg, #525266 0%, #24262B 100%);
  color: #FDCF81;
  border-radius: 50rpx;
  box-shadow: 0 0 10rpx #C3BED5;
}

.select-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 194rpx;
  height: 250rpx;
}

.company-vip-title {
  color: #1A1A1A;
  font-size: 26rpx;
  font-weight: bold;
}

.other-vip-title {
  color: #FDCF81;
}

.company-vip-img {
  width: 130rpx;
  height: 130rpx;
}

.company-vip-explain {
  color: #333333;
  font-size: 18rpx;
}

.other-vip-explain {
  color: #999999;
}

.location {
  display: flex;
  align-items: center;
  padding: 20rpx 0 0 30rpx;
}

.icon-location {
  width: 26rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.location-val {
  color: #1A1A1A;
  font-size: 34rpx;
  font-weight: bold;
}

.not-open {
  color: #999999;
  font-size: 26rpx;
}

.coupon {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.coupon-label {
  color: #1A1A1A;
  font-size: 28rpx;
}

.coupon-val {
  color: #FE0A00;
  font-size: 28rpx;
  font-weight: bold;
}

.company-more-vip-icon {
  color: #FDCF81;
  font-size: 60rpx;
  font-weight: bold;
}