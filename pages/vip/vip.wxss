Page {
  background-color: #ffffff;
  width: 100vw;
  /* display: none; */
  /* overflow-x: hidden */
}

.header {
  position: relative;
  width: 150%;
  margin-left: -25%;
  margin-right: -25%;
  border-bottom-left-radius: 50%;
  border-bottom-right-radius: 50%;
  overflow: hidden;
}

.nav-header {
  position: absolute;
  margin: auto;
  width: 750rpx;
  left: 0;
  right: 0;
}

.user {
  position: absolute;
  z-index: 99;
  left: 0;
  right: 0;
  width: 690rpx;
  height: 200rpx;
  margin: auto;
  display: flex;
}

.portrait {
  width: 136rpx;
  height: 136rpx;
  border: 5rpx solid #fff;
  border-radius: 70rpx;
  margin-right: 20rpx;
  overflow: hidden;
}

.portrait-img {
  width: 100%;
  height: 100%;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.user-name {
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.vip-tag {
  background: linear-gradient(90deg, #FFEDC1 0%, #FDCF81 100%);
  border-radius: 20rpx;
  height: 40rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

.expires-vip-tag {
  background: linear-gradient(90deg, #E5E5E5 0%, #B9B9B9 100%);
}

.vip-type {
  color: #1A1A1A;
  font-size: 24rpx;
  font-weight: bold;
}

.icon-vip {
  width: 60rpx;
  height: 24rpx;
}

.vip-end-date {
  margin-left: 13rpx;
  color: #666666;
  font-weight: bold;
  font-size: 24rpx;
}

.vip-advert {
  position: absolute;
  z-index: 99;
  width: 690rpx;
  height: 200rpx;
  left: 0;
  right: 0;
  margin: auto;
}

.shadow {
  position: absolute;
  z-index: 99;
  bottom: 0;
  height: 30rpx;
  box-shadow: 0 -6rpx 10rpx 0 rgba(0, 0, 0, .15) inset;
  width: 100%;
  border-bottom-left-radius: 45%;
  border-bottom-right-radius: 45%;
}

.model {
  border-bottom: 12rpx solid #F5F4F9;
}

.content {
  position: relative;
  z-index: 9;
  background-color: #ffffff;
}

.record {
  margin: 30rpx auto 20rpx 24rpx;
  width: 100%;
  height: 60rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: rgba(0, 0, 0, .1);
  border-radius: 30rpx;
  width: 690rpx;
  overflow: hidden;
}
