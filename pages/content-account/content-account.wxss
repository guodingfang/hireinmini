
.header-title {
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 800;
}

.m-header {
  background-color: transparent !important;
}


.fixed-header-bg {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	overflow: hidden;
	z-index: 1000;
}

.fixed-header-bg-img {
	width: 100%;
	height: 100%;
}

.user-bg {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	width: 750rpx;
	height: 750rpx;
	z-index: -1;
}

.user-mask {
  position: absolute;
	width: 750rpx;
	height: 500rpx;
  background-image: linear-gradient(180deg,transparent, #ffffff 45%, #ffffff);
  z-index: 999;
}

.user-bg-img {
	width: 750rpx;
	height: 750rpx;
}

.content {
  margin-top: 30rpx;
  border-radius: 30rpx 30rpx 0 0;
  overflow: hidden;
}

.list {
  width: 750rpx;
  display: flex;
  height: 80rpx;
  background-color: #ffffff;
  border-radius: 30rpx 30rpx 0 0;
  border-bottom: 1rpx solid #E5E5E5;
}

.item {
  color: #808080;
  font-size: 32rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.select-item {
  position: relative;
  color: #1A1A1A;
  font-weight: bold;
}

.select-item::after {
  content: '';
  background-color: #0400E6;
  width: 24rpx;
  height: 6rpx;
  position: absolute;
  z-index: 1;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
}