.header-title {
  color: #ffffff;
  font-size: 34rpx;
	font-weight: 800;
	display: flex;
	align-items: center;
}

.icon-back {
	width: 24rpx;
	height: 36rpx;
  padding: 30rpx;
  margin-left: -30rpx;
}

.header-contnt {
	display: flex;
	align-items: center;
}

.small-user-img {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
}

.user-info {
	margin-left: 20rpx;
}

.user-name {
	font-size: 28rpx;
	font-weight: bold;
	color: #ffffff;
	height: 56rpx;
}

.m-header {
  background-color: transparent !important;
}


.fixed-header-bg {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	overflow: hidden;
	z-index: 1000;
}

.fixed-header-bg-img {
	width: 100%;
	height: 100%;
}

.user-bg {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	width: 750rpx;
	height: 750rpx;
	z-index: -1;
}

.user-mask {
  position: absolute;
	width: 750rpx;
	height: 750rpx;
  background-image: linear-gradient(180deg,transparent, #ffffff 45%, #ffffff);
  z-index: 999;
}

.user-bg-img {
  position: relative;
	width: 750rpx;
	height: 750rpx;
}

.mini-video-list,
.goods-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
	justify-content: space-between;
  background-color: #ffffff;
}

.content-account-container {
  height: calc(100vh - var(--topHeader--));
}

.not-content-text {
	display: flex;
	align-items: center;
	justify-content: center;
	color: #aaaaaa;
	margin-top: 24rpx;
}