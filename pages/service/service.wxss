@import "../../common/lib/weui.wxss";

page {
	font-size: 30rpx;
}

.header-fixed {
	position: fixed !important;
	z-index: 999 !important;
	background-color: #ffffff !important;
}


.block {
	height: 100rpx;
}

/* 轮播图 */
.m-carousel {
	width: 750rpx;
	height: 300rpx;
	margin: auto;
}

.fixed-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, .7);
  color: #ffffff;
}

.fixed-item + .fixed-item {
	margin-top: 12rpx	;
}

.fixed-button {
  padding: 0;
  background-color: transparent;
  border: 0rpx solid transparent;
}

.fixed-item, .fixed-button {
  color: #ffffff;
	display: flex;
	flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.fixed-button .icon-share {
	width: 44rpx;
	height: 44rpx;
}

.model {
	background-color: #ffffff;
	margin: 24rpx;
	border-radius: 24rpx;
	overflow: hidden;
}

.model .header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 12rpx;
}

.model .header .title {
  position: relative;
  font-size: 36rpx;
  color: #333333;
  padding-left: 12rpx;
}

.header .title::after {
  content: '';
  position: absolute;
  left: 0;
  width: 6rpx;
  height: 100%;
  border-radius: 6rpx;
  background-color: tomato;
}