/* pages/equipmentDetail/equipmentDetail.wxss */

/* 轮播图片 */
.swriper_box{
  width: 100%;
  height: 370rpx;
  background: #fff;
}
.img_list{
  text-align: center;
}
.swriper_img{
  width: 92%;
  height: 350rpx;
  overflow: hidden;
  border-radius: 10rpx;
  margin: 30rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.img_list image{
  width: 100%;
}
.detail_content{
  background: #fff;
  padding: 10rpx 20rpx;
}
.detail_content_list{
  /* padding-bottom: 15rpx; */
  padding-left: 30rpx;
}
.detail_content_list text{
  font-size: 32rpx;
  color: #666;
}
.detail_content_list text.detail_content_list_txt{
  color: #333;
}
.note_text{
  padding: 20rpx;
  background: #f7d8bf;
  border-radius: 8rpx;
  margin-top: 20rpx;
}
.note_text text, .note_rich_text{
  font-size: 30rpx;
  line-height: 45rpx;
  color: #ec4a21;
  display: block;
}
.detail_title{
  margin: 10rpx 0;
  padding: 20rpx 30rpx;
  font-size: 34rpx;
  background: #f0f0f0;
}
.detail_introduction{
    font-size: 32rpx;
    line-height: 50rpx;
    color: #333;
}
/* 底部按钮 */
.bottom_btn{
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1rpx solid #f0f0f0;
}
.bottom_btn::before{
  content: '';
  width: 1rpx;
  height: 60rpx;
  background: #f0f0f0;
  position: absolute;
  top: 10rpx;
  left: 50%;
}
.bottom_btn text{
  width: 50%;
  float: left;
  text-align: center;
  font-size: 32rpx;
}