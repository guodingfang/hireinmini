/* pages/moreproduct/moreproduct.wxss */

.pro-box {
    background: #fff;
    padding: 25rpx 3%;
    position: relative;
    height: 170rpx;
    margin: 20rpx 25rpx 0 25rpx;
}

.pro-pic {
    width: 32%;
    display: inline-block;
    height: 170rpx;
}

.pro-pic image {
    width: 100%;
    height: 100%;
}

.pro-name {
    width: 65%;
    margin-left: 3%;
    display: inline-block;
    vertical-align: top;
}

.pro-title {
    font-size: 34rpx;
    margin-bottom: 14rpx;
}

.pro-describe {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #888;
}

.client-img {
    position: absolute;
    width: 160rpx;
    height: 38rpx;
    bottom: 30rpx;
    right: 20rpx;
}

.client-img image {
    width: 39rpx;
    height: 40rpx;
    margin-left: 40rpx;
}
