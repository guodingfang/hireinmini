/* pages/client/client.wxss */
@import "../../common/lib/weui.wxss";

.wrap-yang {
    width: 100%;
    overflow-x: hidden;
}

page {
    background: #f0f0f0;
    font-size: 30rpx;
}

.weui-navbar1 {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    z-index: 500;
    top: 0;
    width: 100%;
    border-bottom: 1rpx solid #f0f0f0;
}

.page_fixed {
    position: fixed;
    top: 0;
    left: 0;
    background: #fff;
    z-index: 900;
    width: 100%;
}

.bold {
    font-weight: bold;
}

.bgcolor {
    background: #ff9a00;
}

.container1 {
    width: 100%;
    height: 100%;
}

.clear {
    width: 100%;
    height: 20rpx;
    background: #f0f0f0;
    margin-top: 100rpx;
}

.client-name {
    position: relative;
    padding: 25rpx;
    margin-bottom: 3rpx;
    background: #fff;
}

.client-img {
    position: absolute;
    top: 55rpx;
    right: 40rpx;
    width: 20rpx;
    height: 38rpx;
}

.member-header {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    display: inline-block;
    vertical-align: top;
}

.member-head {
    width: 100%;
    height: 100%;
}

.member-right {
    display: inline-block;
    width: 75%;
    margin-left: 30rpx;
    line-height: 31rpx;
}

.member-name, .member-phone {
    padding: 9rpx 0;
}

.member-phone {
    color: #888;
}

.member-name label {
    display: inline-block;
    color: #ff9a00;
    border: 3rpx solid #ff9a00;
    height: 30rpx;
    font-size: 27rpx;
    margin-left: 20rpx;
    padding: 1rpx 2rpx;
    line-height: 28rpx;
}

.weui-navbar__item {
    flex: none;
}

.weui-navbar__item.client {
    width: 30%;
}

.weui-navbar__item.member {
    width: 30%;
}

.weui-navbar__item.thirdparty {
    width: 40%;
}
.img1{
    width: 30rpx;
    height: 30rpx;
    vertical-align: -2rpx;
    margin-left: 30rpx;
}
.returnindex{
    width: 76rpx;
    height: 76rpx;
    background:rgba(0, 0, 0, 0.7);
    top: 64%;
    right: 20rpx;
    border-radius:50rpx;
    position: fixed; 
    z-index:200;  
}    
.returnindexpic{
    width: 38rpx;
    height: 38rpx;
    /* margin-left:19rpx;
    margin-top:19rpx; */
    position: absolute;
    text-align: center;
    top:25%;
    left: 25%;
}

