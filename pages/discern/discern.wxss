/* pages/discern/discern.wxss */
page{
  /* width: 100%;
  height: 100%; */
  background: linear-gradient(to bottom, #24222f, #21242d);
}
.discern_wrap{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.title{
  font-size: 38rpx;
  color: #fff;
  text-align: center;
  margin-top: 15%;
}
.head_pic{
  width: 420rpx;
  height: 420rpx;
  /* border-radius: 480rpx; */
  border: 6rpx solid #3f4080;
  margin: 100rpx auto 50rpx;
  background: rgba(255,255,255,0.8);
  overflow: hidden;
}
.photo{
  width: 100%;
  height: 100%;
}
.take_photo{
  width: 500rpx;
  margin: 20% auto 0;
}
.discean_text{
  text-align: center;
  position: fixed;
  bottom: 50rpx;
  left: 30rpx;
  right: 30rpx;
}
.discean_text label checkbox{
  transform: scale(0.7, 0.7);
}
.discean_text text{
  font-size: 30rpx;
  color: rgba(255,255,255,0.6);
}