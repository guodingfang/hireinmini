/* pages/client/client.wxss */
@import "../../common/lib/weui.wxss";

.wrap-yang {
    width: 100%;
    overflow-x: hidden;
}

page {
    background: #f0f0f0;
    font-size: 30rpx;
}

.weui-navbar1 {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    z-index: 500;
    top: 0;
    width: 100%;
    border-bottom: 1rpx solid #f0f0f0;
}

.page_fixed {
    position: fixed;
    top: 0;
    left: 0;
    background: #fff;
    z-index: 900;
    width: 100%;
}

.bold {
    font-weight: bold;
}

.bgcolor {
    background: #ff9a00;
}

.container1 {
    width: 100%;
    height: 100%;
    background: #fff;
    position: relative;
    border-bottom: 1rpx solid #f0f0f0;
}

.clear {
    width: 100%;
    height: 20rpx;
    background: #f0f0f0;
    margin-top: 100rpx;
}

.client-name {
    position: relative;
    padding: 25rpx;
    margin-bottom: 3rpx;
    width: 72%;
}

.invite{
    position:absolute;
    top:8rpx;
    right:37rpx;
    padding:10rpx;
    color:red;
}

.invite-btn{
    position:absolute;
    top:26rpx;
    right:37rpx;
    padding:2rpx 12rpx;
    color:#fff;
    background:#dc3939;
    border-radius:6rpx;
    font-size:26rpx;
}

.client-img {
    position: absolute;
    top: 83rpx;
    right: 0;
    width: 160rpx;
    height: 60rpx;
}

.client-img image {
    width: 39rpx;
    height: 40rpx;
    padding:10rpx 16rpx;
}

.party-row view {
    display: inline-block;
}

.party-remark {
    margin-top: 10rpx;
    width: 80%;
    height: 52rpx;
}

.weui-navbar__item {
    flex: none;
}

.weui-navbar__item.client {
    width: 30%;
}

.weui-navbar__item.member {
    width: 30%;
}

.weui-navbar__item.thirdparty {
    width: 40%;
}
.img1{
    width: 30rpx;
    height: 30rpx;
    vertical-align: -2rpx;
    margin-left: 30rpx;
}
.returnindex{
    width: 76rpx;
    height: 76rpx;
    background:rgba(0, 0, 0, 0.7);
    top: 64%;
    right: 20rpx;
    border-radius:50rpx;
    position: fixed; 
    z-index:200;  
}    
.returnindexpic{
    width: 38rpx;
    height: 38rpx;
    /* margin-left:19rpx;
    margin-top:19rpx; */
    position: absolute;
    text-align: center;
    top:25%;
    left: 25%;
}


