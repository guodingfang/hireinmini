/* pages/addinvite/addinvite.wxss */
@import "../../common/css/publiclist.wxss";
.inv-top {
    background: #fff;
    overflow: hidden;
}

.inv-top image {
    width: 260rpx;
    height: 260rpx;
    margin: 40rpx auto;
    display: block;
}

.inv-name {
    font-size: 34rpx;
    text-align: center;
}

.inv-mem {
    color: #ea2843;
    font-size: 30rpx;
    text-align: center;
    margin-top: 25rpx;
    margin-bottom: 40rpx;
}

.log-row {
    border-bottom: 3rpx solid #f0f0f0;
    position: relative;
    background: #fff;
    padding: 0 25rpx;
}

.invma {
    margin-top: 20rpx;
}

.log-row .inv-box {
    display: inline-block;
    width: 70%;
    font-size: 30rpx;
    padding-left: 30rpx;
}

.inv-box input {
    height: 80rpx;
    line-height: 80rpx;
}
.mina{
    display: inline-block;
    vertical-align: top;
    padding: 22rpx 0;
}
.log-img {
    width: 25rpx;
    height: 30rpx;
    display: inline-block;
    margin-right: 25rpx;
    vertical-align: -2rpx;
}

.inv-nick {
    display: inline-block;
    font-size: 30rpx;
    width: 120rpx;
}
