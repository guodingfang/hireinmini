/* pages/order-under/order-under.wxss */
@import "../../common/lib/weui.wxss";

page {
    font-size: 30rpx;
}

.form-wrap {
    overflow: hidden;
}

.pad {
    padding: 0 25rpx;
}

.title {
    margin: 15rpx 0;
    color: #666;
}

.client-info {
    background: #fff;
}

.client-name .name {
    height: 100rpx;
    line-height: 100rpx;
    color: #333;
}

.client-name .name-input {
    display: inline-block;
    width: 100%;
    vertical-align: middle;
    height: 100rpx;
    line-height: 100rpx;
}

.client-name .name-picker {
    display: inline-block;
    width: 100%;
    vertical-align: -8rpx;
    text-align: center;
    padding: 22rpx 0;
}

.sel-public {
    display: inline-block;
    width: 100%;
}

.name-picker {
    display: inline-block;
    width: 70%;
    line-height: 50rpx;
    vertical-align: 4rpx;
}

.client-name .arrow {
    position: absolute;
    right: 0;
    top: 32rpx;
    width: 18rpx;
    height: 30rpx;
}

.client-name {
    position: relative;
    border-bottom: 1rpx solid #f0f0f0;
}

.remove-bottom {
    border: none;
}

.swich {
    position: absolute;
    right: -12rpx;
    top: 19rpx;
}

.top-info {
    margin-top: 20rpx;
}

/*图片上传*/

.weui-uploader__bd {
    margin-bottom: -4rpx;
    margin-right: -9rpx;
    padding-top: 15rpx;
}

.weui-uploader__input-box {
    display: inline-block;
    width: 150rpx;
    height: 150rpx;
    border: 1px solid #d9d9d9;
    margin: 0 25rpx 20rpx 0;
}

.width100 {
    width: 100%;
}

.weui-label {
    font-size: 33rpx;
}

.color-red {
    color: #d43d3d;
}

.weui-uploader__input {
    width: 100%;
    height: 100%;
    opacity: 0;
}

.weui-uploader__file {
    position: relative;
    display: inline-block;
    margin-right: 24rpx;
    margin-bottom: 17rpx;
}

.fechar {
    position: absolute;
    right: -9rpx;
    top: -10rpx;
    padding: 5rpx;
    display: inline-block;
    font-size: 24rpx;
}

.weui-uploader__img {
    display: block;
    width: 150rpx;
    height: 150rpx;
}

/*图片上传*/

.text {
    border: 1px solid #f0f0f0;
    width: 93%;
    padding: 20rpx;
    height: 230rpx;
    overflow: hidden;
    display: block;
}

.baseline {
    height: 20rpx;
    background: #fff;
    display: block;
    margin-bottom: 30rpx;
}

.arrow-add {
    position: absolute;
    right: 35rpx;
    top: 31rpx;
    width: 40rpx;
    height: 40rpx;
}

.col-one {
    width: 23%;
}

.btn-spec {
    padding: 25rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
}

.icon-add {
    width: 35rpx;
    height: 35rpx;
    margin-right: 8rpx;
    position: relative;
    top: 5rpx;
}

.bottom-pad {
    padding: 60rpx 0;
}

.padding-bottom {
    padding-bottom: 20rpx;
}

.input-num {
    border-bottom: 1rpx solid #f0f0f0;
    width: 95%;
    margin-top: 20rpx;
    border-radius: 8rpx;
    text-align: center;
}

.input-num:focus {
    border-bottom: 1rpx solid #2ab7ff;
}

.spec-item {
    line-height: 81rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.spec-item:last-child {
    border-bottom: 0;
}

.icon-spec-del {
    width: 30rpx;
    height: 30rpx;
    position: relative;
    top: 4rpx;
}

/*客户列表*/

.customerlist {
    border: 1rpx solid #f0f0f0;
    position: absolute;
    background: #fff;
    width: 100%;
    z-index: 100;
    max-height: 244px;
    overflow: auto;
}

.customerlist .customer-item {
    line-height: 96rpx;
    border-bottom: 1rpx solid #f0f0f0;
    padding-left: 10rpx;
}

.customerlist .customer-item:last-child {
    border: 0;
}

.weui-cells {
    margin-top: 0;
}

.weui-cells:after {
    border-bottom: 0;
}

.weui-cell {
    padding: 7px 0 5px 0;
}

.icon-delpic {
    width: 40rpx;
    height: 40rpx;
}
.returnindex{
    width: 76rpx;
    height: 76rpx;
    background:rgba(0, 0, 0, 0.7);
    top: 64%;
    right: 20rpx;
    border-radius:50rpx;
    position: fixed; 
    z-index:200;  
}    
.returnindexpic{
    width: 38rpx;
    height: 38rpx;
    /* margin-left:19rpx;
    margin-top:19rpx; */
    position: absolute;
    text-align: center;
    top:25%;
    left: 25%;
}