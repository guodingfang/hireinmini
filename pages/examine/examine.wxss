/* pages/examine/examine.wxss */

page {
    background: #f0f0f0;
    font-size: 30rpx;
}

.client-name {
    position: relative;
    padding: 15rpx 25rpx;
    margin-bottom: 10rpx;
    background: #fff;
}

.member-right {
    display: inline-block;
    width: 70%;
    line-height: 31rpx;
}

.member-name, .member-phone {
    padding: 9rpx 0;
}

.member-phone {
    color: #888;
    font-size: 28rpx;
}

.member-name label {
    display: inline-block;
    color: #ff9a00;
    border: 3rpx solid #ff9a00;
    height: 30rpx;
    font-size: 27rpx;
    margin-left: 20rpx;
    padding: 1rpx 2rpx;
    line-height: 28rpx;
}

.client-img {
    position: absolute;
    top: 38rpx;
    right: 30rpx;
    height: 38rpx;
}

.client-img view {
    display: inline-block;
    margin-left: 30rpx;
    border-radius: 6rpx;
    background: #ff9a00;
    color: #fff;
    padding: 10rpx 10rpx;
    font-size: 28rpx;
}

.string {
    border-top: 1rpx solid #f0f0f0;
}

.position-r {
    position: relative;
}

.client-img .ex-btn {
    background: #bcbcbc;
}

.exbox {
    width: 80%;
    border-radius: 20rpx;
    background: #fff;
    position: absolute;
    top: 30%;
    left: 50%;
    margin-left: -40%;
    font-size: 32rpx;
    color: #333;
}

.extitle {
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    border-bottom: 3rpx solid #f0f0f0;
    margin-bottom: 10rpx;
}

.ex-row {
    padding: 20rpx 20rpx 0rpx 20rpx;
}

.exname {
    padding: 15rpx 20rpx;
    display: inline-block;
    width: 15%;
    vertical-align: top;
}

.right {
    display: inline-block;
    width: 75%;
}

.name-input {
    border: 3rpx solid #f0f0f0;
    height: 60rpx;
    border-radius: 10rpx;
    line-height: 60rpx;
}

.ex-btn1 {
    border-top: 3rpx solid #f0f0f0;
    margin-top: 30rpx;
}

.ex-btn1 view {
    display: inline-block;
    width: 49%;
    text-align: center;
    line-height: 80rpx;
}

.ex-btn1 .feng1 {
    display: inline-block;
    width: 49%;
    text-align: center;
    line-height: 80rpx;
    border: none;
    overflow: visible;
    border-radius: 0rpx;
    position: static;
    background: #fff;
    padding: 0;
    font-size: 32rpx;
    height: 80rpx;
}

.feng {
    border-right: 3rpx solid #e0e0e0;
}

.exshade {
    width: 100%;
    height: 100%;
    background: rgb(0, 0, 0);
    opacity: 0.7;
    position: absolute;
    top: 0;
    left: 0;
}

.no-iner {
    margin-top: 40rpx;
}

.returnindex{
    width: 76rpx;
    height: 76rpx;
    background:rgba(0, 0, 0, 0.7);
    top: 64%;
    right: 20rpx;
    border-radius:50rpx;
    position: fixed;
    z-index:200;   
}    
.returnindexpic{
    width: 38rpx;
    height: 38rpx;
    /* margin-left:19rpx;
    margin-top:19rpx; */
    position: absolute;
    text-align: center;
    top:25%;
    left: 25%;
}