@import '/assets/style/global.wxss';

Page {
  background-color: #FFFFFF;
}

.title {
  margin: 20rpx 30rpx;
  width: 690rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #1A1A1A;
}

.input-content {
  height: calc(100vh - 550rpx);
  margin: 0 30rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.input-content-val {
  width: 100%;
  height: 100%;
}

.pl-input {
  font-size: 28rpx;
  color: #999999;
  font-weight: 400;
}

.upload-container {
  display: flex;
}

/* footer */
.footer {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 100rpx;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  z-index: 99;
}

.btn {
  margin: auto;
  width: 640rpx;
  height: 70rpx;
  background: #45E6A7;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font: 30rpx;
}


.publish-complete {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.publish-complete-img {
  width: 256rpx;
  height: 204rpx;
  margin: 147rpx 247rpx 137rpx 247rpx;
}
