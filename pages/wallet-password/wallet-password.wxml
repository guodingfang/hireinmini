
<view class="model">
  <m-header title="{{ reset ? '重置密码' : '设置密码' }}" more="{{false}}" />
  
  <view class="input-item not-input-border">
    <input class="input-val" value="{{phone}}" type="number" disabled />
  </view>
  <view class="input-item">
    <input
      class="input-val"
      type="number"
      placeholder-class="pl-input"
      maxlength="6"
      data-type="smscode"
      placeholder="请输入短信验证码"
      bindinput="onChangeInput"
    />
    <view
      class="get-code {{remainingTime ? 'not-get-code' : ''}}"
      bind:tap="sendCode">{{ remainingTime || '获取验证码' }}</view>
  </view>
  <view class="input-item">
    <input
      class="input-val"
      type="number"
      maxlength="6"
      placeholder-class="pl-input"
      data-type="password"
      password="{{isShowPassword}}"
      placeholder="请输入账号密码"
      bindinput="onChangeInput"  
    />
    <image
      class="icon-see"
      bind:tap="onShowPassword"
      src="{{ isShowPassword ? '/images/icon/not-see.png' : '/images/icon/see.png'}}"
    ></image>
  </view>
  <view class="input-item">
    <input
      class="input-val"
      type="number"
      maxlength="6"
      placeholder-class="pl-input"
      data-type="againPassword"
      password="{{isShowPassword}}"
      placeholder="请再次输入账号密码"
      bindinput="onChangeInput"
    />
    <image
      class="icon-see"
      bind:tap="onShowPassword"
      src="{{ isShowPassword ? '/images/icon/not-see.png' : '/images/icon/see.png'}}"
    ></image>
  </view>
  
  <view class="btn" bind:tap="onSetPassword">设置</view>
</view>