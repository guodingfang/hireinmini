
.model {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  width: 690rpx;
  margin: 30rpx;
  border-radius: 30rpx;
}

.input-item {
  display: flex;
  border: 1rpx solid #e5e5e5;
  border-radius: 20rpx;
  height: 70rpx;
  align-items: center;
  margin: 15rpx 30rpx;
  overflow: hidden;
}

.not-input-border {
  border-color: transparent;
}

.input-val {
  flex: 1;
  padding-left: 20rpx;
  font-size: 28rpx;
}

.pl-input {
  color: #999999
}

.icon-see {
  width: 68rpx;
  height: 68rpx;
}

.get-code {
  min-width: 180rpx;
  padding: 0 24rpx;
  background-color: #F5F4F9;
  color: #FFA12C;
  font-size: 28rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  box-sizing: border-box;
}

.get-code.not-get-code {
  color: #999999;
}

.btn {
  width: 640rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background-color: #0400E6;
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx auto;
}