/* pages/client_order_info/client_order_info.wxss */
@import "../../common/lib/weui.wxss";

page {
    font-size: 30rpx;
}

.string {
    border-top: 1rpx solid #f0f0f0;
}

.pad-fill {
    padding-top: 10rpx;
}

.position-r {
    position: relative;
}

.order-info {
    margin-top: 20rpx;
    padding: 0 25rpx;
    background: #fff;
}

.order-info-title {
    padding: 25rpx 0;
    border-bottom: 1rpx solid #dedede;
}

.order-info .img {
    padding-right: 16rpx;
    width: 26rpx;
    height: 30rpx;
    vertical-align: -3rpx;
}

.order-info .img1 {
    padding-right: 16rpx;
    width: 28rpx;
    height: 28rpx;
    vertical-align: -2rpx;
}

.order-info-title .title {
    display: inline-block;
}

.order-info-name {
    display: inline-block;
    padding: 23rpx 0;
    padding-right: 20rpx;
    width: 140rpx;
    color: #acacac;
    vertical-align: top;
}

.content {
    display: inline-block;
    padding: 23rpx 0;
    width: 77%;
}

.title-name {
    position: absolute;
    top: 25rpx;
    right: 0;
    color: #ff9a00;
}

.equipment-info {
    display: -webkit-flex;
    display: flex;
    line-height: 60rpx;
}

.equipment-info .val {
    width: 100%;
}

.personnel-name {
    display: inline-block;
    padding-right: 26rpx;
}

.orange {
    color: #ff9a00;
}

.personnel-name image {
    padding-left: 18rpx;
}

.prcture-img-list {
    display: -webkit-flex;
    display: flex;
    padding: 10rpx 0;
}

.prcture-img {
    padding: 5rpx;
    flex: 1;
    height: 167rpx;
}

.evaluate-content {
    display: inline-block;
    padding: 16rpx 0;
    width: 77%;
}

.evaluate-name {
    vertical-align: top;
}

.pad-wrap {
    padding: 25rpx 0;
}

.detail-total .detail-item:not(:last-child) {
    border-bottom: 1rpx solid #f0f0f0;
}
