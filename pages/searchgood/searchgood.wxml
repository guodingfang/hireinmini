<!--pages/searchgood/searchgood.wxml-->
<view class="searchs">
    <view class="flex">
        <view class="frame">
            <image src="../../images/icon-search1.png"></image>
            <input type="text" placeholder=" 请输入搜索内容" name='searchval' bindinput='searchsContent' value="{{searchsContent}}" placeholder-style='color:#ccc;' />
        </view>
        <view class="search" bindtap='search'>搜索</view>
    </view>
</view>
<view hidden="{{search}}">
    <view class="hotSearchs">热门搜索</view>
    <view class="hotContent">
        <view class="Content" wx:for='{{hotlist}}' wx:for-item='item' bindtap="searchs" data-val='{{item.content}}' wx:key="{{index}}">{{item.content}}</view>
    </view>
    <view hidden="{{his}}" class="historySearchs">
        <view class="flex">
            <view class="col-10">历史搜索</view>
            <view class="col-2 delete_img" bindtap='clear'>
                <label class='empty'>
                    <image bindtap="empty" src="../../images/icon-del.png"></image>清空
                </label>
            </view>
        </view>
    </view>
    <view hidden="{{his}}" class="historyContent">
        <view class="Content1" wx:for='{{hislist}}' wx:for-item='item' bindtap="searchs" data-val='{{item.searchtext}}' wx:key="{{index}}">
            <image src="../../images/icon-search1.png"></image>
            <view>{{item.searchtext}}</view>
        </view>
    </view>
</view>
<view hidden='{{lists}}'>
    <view wx:for='{{list}}' wx:for-item='item' wx:key="{{index}}">
        <view bindtap='companydetails' class='company-row' data-url='companydetails/companydetails?companyid={{item.companyid}}&typeid=2'>
            <view class='comp-content'>
                <view class='comp-img'>
                    <image src='{{imgurl}}{{item.logopic}}' wx:if='{{item.logopic != ""}}'></image>
                    <image src='../../images/none.jpg' wx:else></image>
                </view>
                <view class='comp-right'>
                    <view class='comp-title word-wrap'>
                        {{item.companyname}}
                    </view>
                    <view class='work-list' wx:if='{{item.briefintroduction != ""}}'>
                        <view class='work' wx:for='{{item.label}}' wx:for-item='label' wx:key="{{index}}">
                            {{label.labelname}}
                        </view>
                    </view>
                    <view class='city'>
                        {{item.cityname}}{{item.address}}
                    </view>
                </view>
            </view>
        </view>
    </view>
    <view class="show-loading" wx:if="{{hidden}}">正在加载</view>
    <view class="show-loading" wx:if="{{finish}}">加载完毕</view>
    <loading hidden="{{loadingHidden}}">
        加载中...
    </loading>
    <view class='no-info' wx:if="{{noresult}}">
        <image src='../../images/noinfo.png' class='no-info-img'></image>
    </view>
    <view class="show-loading gray" wx:if="{{noresult}}">未搜索到您想要的内容</view>
</view>