/* pages/searchgood/searchgood.wxss */

page {
    background: #f0f0f0;
}

.searchs {
    background: #2ab7ff;
    padding: 13rpx 0;
}

.frame {
    width: 72%;
    position: relative;
    padding: 0 20rpx;
    font-size: 30rpx;
}

.frame image {
    position: absolute;
    top: 18rpx;
    left: 45rpx;
    width: 40rpx;
    height: 40rpx;
}

.searchs input {
    display: inline-block;
    padding: 0rpx 20rpx 0rpx 80rpx;
    width: 500rpx;
    height: 74rpx;
    background: #f7f7f7;
    border-radius: 50rpx;
    vertical-align: middle;
    line-height: 74rpx;
}

.search {
    position: absolute;
    padding: 0 40rpx;
    color: #fff;
    line-height: 74rpx;
    right: 8rpx;
    top: 12rpx;
    background: none;
    font-size: 32rpx;
}

button::after {
    content: none;
}

.hotSearchs, .historySearchs {
    padding: 20rpx 20rpx;
    font-family: "黑体";
    color: #5c5c5c;
    font-size: 30rpx;
}

.historySearchs view {
    display: inline-block;
}

.delete_img {
    text-align: right;
}

.historySearchs image {
    width: 30rpx;
    height: 35rpx;
    vertical-align: -5rpx;
    margin-right: 8rpx;
}

.hotContent {
    background: #fff;
    border: 1px solid #dfdfdf;
    border-right: none;
    border-bottom: none;
}

.Content {
    border-right: 1rpx solid #dfdfdf;
    border-bottom: 1rpx solid #dfdfdf;
    font-family: "黑体";
    font-size: 30rpx;
    display: inline-block;
    text-align: center;
    width: 33%;
    line-height: 80rpx;
}

.Content1 {
    border-bottom: 1rpx solid #dfdfdf;
    position: relative;
    font-family: "黑体";
    font-size: 30rpx;
    display: block;
    line-height: 80rpx;
    padding-left: 75rpx;
    background: #fff;
}

.Content1 image {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    left: 20rpx;
    top: 28rpx;
}

.empty {
    font-size: 30rpx;
}

/*公司列表*/

.company-row {
    background: #fff;
    margin: 0 20rpx;
    margin-top: 18rpx;
}

.comp-title {
    max-width: 420rpx;
    font-size: 32rpx;
    color: #555;
}

.comp-img {
    width: 180rpx;
    height: 180rpx;
    display: inline-block;
    padding-right: 3%;
    vertical-align: top;
}

.comp-img image {
    width: 100%;
    height: 100%;
}

.comp-content {
    padding: 20rpx;
}

.comp-right {
    display: inline-block;
    width: 420rpx;
    font-size: 27rpx;
    color: #888;
    line-height: 60rpx;
    height: 180rpx;
}

.comp-con {
    overflow: hidden;
}

.co-tap {
    margin-top: 10rpx;
}

.work-list {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    max-width: 448rpx;
}

.work {
    margin-right: 4rpx;
    padding: 0 8rpx;
    display: inline-block;
    text-align: center;
    border: 1rpx solid #fea201;
    border-radius: 6rpx;
    font-size: 26rpx;
    color: #fea201;
    line-height: 40rpx;
    min-width: 110rpx;
}

.comp-content .city {
    color: #ccc;
}

.mycompany {
    position: fixed;
    right: 26rpx;
    bottom: 160rpx;
    background: #000;
    border-radius: 50%;
    text-align: center;
    filter: alpha(Opacity=70);
    -moz-opacity: 0.7;
    opacity: 0.7;
}

.mycompany .name {
    padding: 28rpx;
    width: 60rpx;
    height: 60rpx;
    color: #fff;
    font-size: 28rpx;
}

