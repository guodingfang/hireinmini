/* pages/serverPage/serverPage.wxss */
.head_search{
  height: 100rpx;
  line-height: 100rpx;
  background: #2ab7ff;
  padding: 0 15%;
  overflow: hidden;
}
.head_search text{
  font-size: 32rpx;
  color: #fff;
  display: block;
  float: left;
  margin-left: -16%;
  margin-right: 4%;
}
.head_search .search_ipt{
  width: 85%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 10rpx;
  float: left;
  position: relative;
}
.head_search .search_ipt input{
  padding-left: 70rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.head_search .search_ipt image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  left: 15rpx;
}
.search_btn{
  float: right;
  margin-right: -16%;
  font-size: 34rpx;
  color: #fff;
}
/* 轮播图片 */
.swriper_box{
  width: 100%;
  height: 380rpx;
  background: #fff;
}
.img_list{
  text-align: center;
}
.swriper_img{
  width: 92%;
  height: 320rpx;
  overflow: hidden;
  border-radius: 10rpx;
  margin: 30rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
}
.img_list image{
  width: 100%;
}
.wx-swiper-dots{
  position: absolute;
  top: 320rpx;
}
/* 标题样式 */
.title{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 32rpx;
  position: relative;
  background: #fff;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.title::before{
  content: '';
  width: 8rpx;
  height: 40rpx;
  background: #df9e12;
  position: absolute;
  top: 20rpx;
  left: 15rpx;
}
.title text{
  float: right;
  color: #47acf0;
  font-size: 30rpx;
}
.equipment{
  background: #fff;
  padding: 30rpx 20rpx 30rpx 320rpx;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
}
.equipment_img{
  width: 300rpx;
  height: 180rpx;
  background: #999;
  border-radius: 20rpx;
  position: absolute;
  top: 50%;
  left: 20rpx;
  margin-top: -75rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: -90rpx;
}
.equipment_img image{
  width: 100%;
}
.text_info{
  padding-left: 15rpx;
}
.text_list{
  font-size: 30rpx;
  line-height: 35rpx;
  padding-top: 15rpx;
  color: #666;
}

.text_name{
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  padding-top: 0;
}
.rent_btn{
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #dadbe0;
  font-size: 30rpx;
  text-align: center;
  border-radius: 70rpx;
  position: absolute;
  right: 20rpx;
  bottom: 25rpx;
  /* top: 50%;
  margin-top: -35rpx; */
}
.rent_btn_on{
  background: #ec6b20;
  color: #fff;
}
.bottom_btn{
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1rpx solid #f0f0f0;
}
.bottom_btn::before{
  content: '';
  width: 1rpx;
  height: 60rpx;
  background: #f0f0f0;
  position: absolute;
  top: 10rpx;
  left: 50%;
}
.bottom_btn text{
  width: 50%;
  float: left;
  text-align: center;
  font-size: 32rpx;
  position: relative;
}
.bottom_btn text .number{
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 40px;
  padding: 0 15rpx;
  background: #f30;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  top: 23rpx;
  left: 75%;
}