
.message {
  display: flex;
  flex-direction: column;
  padding-top: 12rpx;
}

.time {
  color: #666666;
  font-size: 24rpx;
  margin: auto;
}

.message-item {
  padding: 12rpx;
  display: flex;
}

.message-right {
  margin-left: auto;
}

.head-portrait {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
}

.message-left .head-portrait {
  margin-right: 12rpx;
}

.message-right .head-portrait {
  margin-left: 12rpx;
}

.content {
  max-width: 600rpx;
  position: relative;
  background-color: #e2e2e2;
  padding: 12rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  word-wrap: break-word;
}

.content::before {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  transform: rotate(45deg);
  background-color: #e2e2e2;
  top: 32rpx;
}

.message-left .content::before {
  left: -6rpx;
}

.message-right .content::before {
  right: -6rpx;
}

.message-footer {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 24rpx;
}

.message-val {
  width: 600rpx;
  height: 60rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  padding-left: 12rpx;
}

.message-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}