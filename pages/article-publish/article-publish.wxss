

Page {
  background-color: #FFFFFF;
}

.input-title {
  height: 100rpx;
  margin: 0 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
}

.input-title-val {
  width: 100%;
  font-size: 28rpx;
  font-weight: bold;
}

.input-content {
  height: 350rpx;
  margin: 0 30rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.input-content-val {
  width: 100%;
  height: 100%;
}

.pl-input {
  font-size: 28rpx;
  color: #999999;
  font-weight: 400;
}

.upload-container {
  display: flex;
}

.pay-price {
  height: 100rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}

.pay-price .label {
  font-size: 28rpx;
  font-weight: bold;
}

.pay-title-val {
  flex: 1;
  background-color: #F5F4F9;
  border-radius: 20rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  height: 70rpx;
}

/* footer */
.footer {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 100rpx;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  z-index: 999;
}

.btn {
  margin: auto;
  width: 640rpx;
  height: 70rpx;
  background: #0400E6;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font: 30rpx;
}


.publish-complete {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.publish-complete-img {
  width: 256rpx;
  height: 204rpx;
  margin: 147rpx 247rpx 137rpx 247rpx;
}
