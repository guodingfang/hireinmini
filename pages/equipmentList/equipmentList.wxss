/* pages/equipmentList/equipmentList.wxss */
.equipment{
  background: #fff;
  padding: 30rpx 20rpx 30rpx 320rpx;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
}
.equipment_img{
  width: 300rpx;
  height: 180rpx;
  background: #999;
  border-radius: 20rpx;
  position: absolute;
  top: 50%;
  left: 20rpx;
  margin-top: -75rpx;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: -90rpx;
}
.equipment_img image{
  width: 100%;
}
.text_info{
  padding-left: 15rpx;
}
.text_list{
  font-size: 30rpx;
  line-height: 35rpx;
  padding-top: 15rpx;
  color: #666;
}

.text_name{
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  padding-top: 0;
}
.rent_btn{
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: #dadbe0;
  font-size: 30rpx;
  text-align: center;
  border-radius: 70rpx;
  position: absolute;
  right: 20rpx;
  bottom: 25rpx;
  /* top: 50%;
  margin-top: -35rpx; */
}
.rent_btn_on{
  background: #ec6b20;
  color: #fff;
}
.bottom_btn{
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1rpx solid #f0f0f0;
}
.bottom_btn::before{
  content: '';
  width: 1rpx;
  height: 60rpx;
  background: #f0f0f0;
  position: absolute;
  top: 10rpx;
  left: 50%;
}
.bottom_btn text{
  width: 50%;
  float: left;
  text-align: center;
  font-size: 32rpx;
}