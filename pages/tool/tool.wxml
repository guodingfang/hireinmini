<view class="header" style="height: {{headerBlock}}rpx;margin-top: {{headerTop}}rpx;">
  <image class="icon-back" src="/images/icon/back.png" bind:tap="onBack"></image>
  <text>租赁常用工具</text>
</view>

<view class="user-bg">
	<view class="user-mask"></view>
	<image class="user-bg-img" src="{{bgImagesUrl}}"></image>
</view>


<v-tab
  class="tabs"
  list="{{tabList}}"
  top="{{headerBlock + headerTop}}"
  bind:select="onSelectTab"
  tabsBgColor="transparent"
  backgroundColor="transparent"
  tabColor="#e5e5e5"
  tabSelectColor="#fff"
  borderColor="#fff"
  defaultIndex="{{defaultIndex}}"
>
  <view class="tabs-item" slot="item-1">
    <v-power />
    <m-advert page="power" />
  </view>
  <view class="tabs-item" slot="item-2">
    <v-led />
    <m-advert page="led" />
  </view>
  <view class="tabs-item" slot="item-3">
    <v-led-mini />
    <m-advert page="ledmini" />
  </view>
  <view class="tabs-item" slot="item-4">
    <v-truss />
    <m-advert page="truss" />
  </view>
  <view class="tab-item" slot="item-5">
    <v-truss-compute />
    <m-advert page="truss-compute" />
  </view>
  <view class="tabs-item" slot="item-6">
    <v-ly />
    <m-advert page="ly" />
  </view>
  <view class="tabs-item" slot="item-7">
    <v-projection />
    <m-advert page="projection" />
  </view>
  <view class="tabs-item" slot="item-8">
    <v-stage />
    <m-advert page="stage" />
  </view>
  <view class="tabs-item" slot="item-9">
    <v-delay />
    <m-advert page="delay" />
  </view>
  <view class="tabs-item" slot="item-10">
    <v-scal />
    <m-advert page="scal" />
  </view>
  <view class="tab-item" slot="item-11">
    <v-truss-prints />
    <m-advert page="truss-prints" />
  </view>

</v-tab>

<m-location
	loading="{{locationLoading}}"
	errLoading="{{locationErrLoading}}"
	bind:again="onAgainLocation"
	bind:manual="onManualLocation" 	
/>