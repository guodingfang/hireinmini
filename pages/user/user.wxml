
<view style="height: {{headerBlock}}rpx">
  <v-header
		m-header="m-header"
    fixed="{{true}}"
    currentPage="user"
    isTopTitle="{{true}}"
    isHeaderContent="{{false}}"
  />
	<button style="top: {{statusBarHeight + 2}}rpx" class="dial-button" open-type="contact" bindcontact="handleContact">
		<image class="icon-dial" src="/images/icon/dial-3.png"></image>
  </button>
</view>

<v-info userinfo="{{userinfo}}" msgCount="{{msgCount}}" />

<m-fixed-header-image height="{{headerBlock}}" bgImagesUrl="{{bgImagesUrl}}" />

<view class="user-bg">
	<view class="user-mask"></view>
	<image class="user-bg-img" src="{{bgImagesUrl}}"></image>
</view>

<view class="vip-model" bind:tap="onSVip">
	<block wx:if="{{!isVip}}">
		<text class="explain">成为VIP会员享更多福利权益</text>
		<view class="btn">成为VIP会员</view>
	</block>
	<block wx:else>
		<view class="vip-tag {{expires ? 'expires-vip-tag' : ''}}">
			<text class="vip-type">{{userVipInfo.title}}</text>
			<image src="/images/icon/vip-3.png" class="icon-vip"></image>
		</view>
		<text class="vip-end-date">{{ !expires ? userVipInfo.endDate + '到期' : '已到期'}}</text>
	</block>
</view>

<v-account
	userinfo="{{userinfo}}"
	orderaudit="{{orderaudit}}"
	ordernum="{{ordernum}}"
/>

<v-order orderaudit="{{orderaudit}}" ordernum="{{ordernum}}" />

<view style="margin-top: 20rpx;">
	<v-skip
		src="{{ !skipCompanyUrl ? openServiceImg : enterServiceImg }}"
		width="690"
		height="168"
		bind:skip="onSelectCompany"
		data-type="service"
		url="{{skipCompanyUrl}}"
	/>
</view>

