<view class="model">
	<v-company company="{{company}}" notPayAmount="{{notPayAmount}}" bind:open="onSelectCompany" />
	<v-knowledge />
	<v-group />
	<v-advert />
</view>

<v-company-select
	type="{{selectType}}"
	showModel="{{showModel}}"
	bind:close="onCloseModel"	
	bind:open="onOpenCompany"
	bind:add="onAddCompany"
/>

<view class="advert" wx:if="{{!company}}">
	<v-skip
		src="{{advertImg}}"
		width="690"
		height="200"
		radius="20"
		bind:skip="onSelectCompany"
		data-type="manufacturer"
		url="{{skipCompanyUrl}}"
	/>
</view>

