
.message {
  display: flex;
  flex-direction: column;
  padding-top: var(--keyboardHeight--);
  height: calc(100vh - 100rpx);
  box-sizing: border-box;
}

.time {
  color: #666666;
  font-size: 24rpx;
  margin: auto;
  padding: 0 12rpx;
  position: absolute;
  white-space: nowrap;
}

.message-left .time {
  left: 0;
}

.message-right .time {
  right: 0;
}

.message-item {
  padding: 24rpx 12rpx 12rpx 12rpx;
  display: flex;
}

.message-item:last-child {
  margin-bottom: 12rpx;
}

.message-right {
  margin-left: auto;
  flex-direction: row-reverse;
}

.head-portrait {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
}

.message-left .head-portrait {
  margin-right: 12rpx;
}

.message-right .head-portrait {
  margin-left: 12rpx;
}

.info {
  position: relative;
  padding-bottom: 36rpx;
}

.content {
  max-width: 500rpx;
  position: relative;
  background-color: #e2e2e2;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  word-wrap: break-word;
}

.message-right .content {
  margin-right: 12rpx;
}

.message-left .content {
  margin-left: 12rpx;
}

.content::before {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  transform: rotate(45deg);
  background-color: #e2e2e2;
  top: 32rpx;
}

.content-text {
  width: 100%;
  word-wrap: break-word;
}

.content-img {
  /* width: 100%; */
}

.message-left .content::before {
  left: -6rpx;
}

.message-right .content::before {
  right: -6rpx;
}

.message-footer {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 24rpx;
}

.message-val {
  flex: 1;
  /* width: 600rpx; */
  height: 60rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  padding-left: 12rpx;
}

.message-btn {
  width: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-pic {
  width: 50rpx;
  height: 50rpx;
}