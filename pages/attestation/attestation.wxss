.pic_info_list .pic_img .img_popup{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0);
}
.pic_info_list .pic_txt{
  font-size: 30rpx;
  text-align: center;
}
.pic_info_list .pic_txt text{
  color: #f30;
}
.sub_btn{
  margin: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #10a0e7;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}