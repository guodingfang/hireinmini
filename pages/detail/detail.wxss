.details-title {
	color: #1A1A1A;
	font-size: 40rpx;
	font-weight: 800rpx;
}

.content-accont {
	display: flex;
	background-color: #F7F7F7;
	border-radius: 20rpx;
	width: 690rpx;
	height: 120rpx;
}

.content-accont-log {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
}

.info {
	display: flex;
	flex-direction: column;
}

.attention {
	background-color: #FFEED9;
	width: 133rpx;
	height: 50rpx;
	color: #FFA12C;
	font-size: 24rpx;
	text-align: center;
	line-height: 50rpx;
	border-radius: 12rpx;
}

/* ************** */
.page-content {
	margin-bottom: 20rpx;
	background: #fff;
}

.content-list {
	margin: 0 26rpx;
}

.othermes {
	background: #fff;
}

.othermes .o-title-wrap {
	padding: 0 26rpx;
	line-height: 80rpx;
}

.othermes .o-title {
	border-bottom: 1rpx solid #f0f0f0;
}

.fixed-phone {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	background: #fff;
	border-top: 1rpx solid #f0f0f0;
	overflow: hidden;
	height: 100rpx;
	line-height: 50rpx;
	text-align: center;
	z-index: 50;
}

.fixed-item {
	display: inline-block;
	margin: 12rpx 0;
	width: 92%;
	height: 74rpx;
	line-height: 74rpx;
	border-radius: 74rpx;
	font-size: 30rpx;
}

.more-btn {
	border: 1rpx solid #333;
}

.phone-btn {
	color: #fff;
	background: linear-gradient(to right, #2ab7ff, #6dccfc);
}

.icon-public {
	margin-right: 10rpx;
	width: 32rpx;
	height: 32rpx;
	vertical-align: -6rpx;
}

.border-right {
	border-right: 1rpx solid #f0f0f0;
}

.padding-bottom {
	padding-bottom: 120rpx;
}

.item-operation {
	padding-left: 26rpx;
	padding-top: 20rpx;
	padding-bottom: 20rpx;
}

.item-pub {
	border: 1rpx solid #d43d3d;
	border-radius: 6rpx;
	padding: 6rpx 22rpx;
	display: inline-block;
	color: #d43d3d;
	margin-right: 30rpx;
}

.item-del {
	color: #3d3d3d;
	border: 1rpx solid #3d3d3d;
}

.pulist {
	padding: 20rpx;
	border-bottom: 1rpx solid #d6d6d6;
}

.comment-wrap {
	margin-left: 14%;
	color: #576b95;
	background: #eee;
	font-size: 28rpx;
	margin-top: 20rpx;
	position: relative;
}

.comment-wrap .icon-sanjiao {
	width: 30rpx;
	height: 14rpx;
	position: absolute;
	top: -12rpx;
	left: 16rpx;
}

.com-wrap {
	width: 100%;
	min-height: 80rpx;
	background: #ebebeb;
	position: fixed;
	z-index: 51;
	bottom: 0;
	left: 0;
	padding-top: 6rpx;
	padding-bottom: 8rpx;
}

.com-wrap .btn-send {
	width: 76%;
	border: 1rpx solid #d4d4d4;
	background: #ebebeb;
	color: #d4d4d4;
	padding: 0;
	margin: 12rpx auto;
	text-align: center;
	height: 66rpx;
	line-height: 66rpx;
	border-radius: 6rpx;
	font-size: 30rpx;
}

.com-wrap .btn-send.active {
	background: #d43d3d;
	color: #fff;
	border: 0;
}

.com-wrap .com-textarea {
	width: 98%;
	min-height: 80rpx;
	height: auto;
	border-bottom: 1px solid #d4d4d4;
	line-height: 80rpx;
	text-indent: 4rpx;
	margin-left: 2%;
}

.misk-wrap {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: rgba(0, 0, 0, 0.7);
	z-index: 50;
}

.commitlist {
	padding: 20rpx;
}

.commitlist .commit-item {
	color: #333;
	font-size: 30rpx;
	line-height: 36rpx;
	margin-top: 8rpx;
}

.commitlist .commit-item:first-child {
	margin-top: 0;
}

.commitlist .commit-item .color-link {
	color: #576b95;
	margin: 0 2rpx;
}

