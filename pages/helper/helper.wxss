Page {
  background-color: #F7F7F7;
}

.advert {
  margin: 20rpx auto;
}

.model {
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  margin: 20rpx 30rpx;
  box-sizing: border-box;
  border-radius: 24rpx;
  overflow: hidden; 
}

.content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.content-not {
  margin: 24rpx;
}

.tool-content {
  height: 155rpx;
  display: flex;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.tool-item {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tool-item .icon-vip {
  position: absolute;
  width: 50rpx;
  height: 28rpx;
  top: 0;
  right: 30rpx;
}

.tool-item .tool-img {
  width: 86rpx;
  height: 86rpx;
}

.tool-item .label {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #666666;
}

.fixed-item .consult{
  width: 130rpx;
  height: 130rpx;
}

.block {
  height: 60rpx;
}