
<view style="height: {{headerBlock}}rpx">
  <v-header
    fixed="{{true}}"
    isCity="{{!!city}}"
    currentPage="helper"
    isTopTitle="{{true}}"
    isHeaderContent="{{false}}"
  />
</view>

<view style="height: 88rpx">
  <v-helper-header city="{{cityname}}" locationInfo="{{locationInfo}}" />
</view>


<view class="advert">
  <v-skip
    src="/images/advert/open-vip.png"
    width="690"
    height="200"
    bind:skip="onSkipVip"
  />
</view>

<view class="model tool">
  <m-header title="租赁常用工具" bind:more="onSkipTool" />
  <view class="content tool-content">
    <view
      class="tool-item"
      wx:for="{{tools}}"
      wx:key="id"
      data-type="{{item.type}}"
      bind:tap="onSkipTool"
    >
      <image class="tool-img" src="./images/{{item.type}}.png"></image>
      <text class="label">{{item.val}}</text>
    </view>
  </view>
</view>

