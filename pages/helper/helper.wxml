
<view style="height: {{headerBlock}}rpx">
  <v-header
    m-header="{{ bgImagesUrl ? 'm-header' : ''}}"
    fixed="{{true}}"
    isCity="{{!!city}}"
    currentPage="helper"
    isTopTitle="{{true}}"
    isHeaderContent="{{false}}"
  />
</view>

<view style="height: 88rpx">
  <v-helper-header
    m-header="{{ bgImagesUrl ? 'm-header' : ''}}"
    city="{{cityname}}"
    locationInfo="{{locationInfo}}"
  />
</view>

<m-fixed-header-image
	wx:if="{{bgImagesUrl}}"
	height="{{headerBlock + 88}}"
	bgImagesUrl="{{bgImagesUrl}}"
/>

<view class="model tool">
  <m-header title="常用计算工具" bind:more="onSkipTool" />
  <view class="content tool-content">
    <view
      class="tool-item"
      wx:for="{{tools}}"
      wx:key="id"
      data-type="{{item.type}}"
      bind:tap="onSkipTool"
    >
      <image class="tool-img" src="./images/{{item.type}}.png"></image>
      <image wx:if="{{item.isVip}}" class="icon-vip" src="/images/icon/vip-2.png"></image>
      <text class="label">{{item.val}}</text>
    </view>
  </view>
</view>

<view class="advert">
  <v-skip
    src="{{remoteImagesUrl}}/advert/open-vip.png"
    width="690"
    height="200"
    bind:skip="onSkipVip"
  />
</view>

