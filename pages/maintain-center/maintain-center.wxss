
.activity {
  display: flex;
  flex-direction: column;
}

.activity-item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 24rpx;
}


.activity-img {
  width: 710rpx;
  height: 300rpx;
  border-radius: 24rpx;
}

.list {
  margin: 24rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
}

.classify {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
}

.classify-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 12rpx;
}

.header .title {
  position: relative;
  font-size: 36rpx;
  color: #333333;
  padding-left: 12rpx;
}

.header .title::after {
  content: '';
  position: absolute;
  left: 0;
  width: 6rpx;
  height: 100%;
  border-radius: 6rpx;
  background-color: tomato;
}

.item {
  padding: 24rpx;
  display: flex;
}

.img {
  width: 230rpx;
  height: 160rpx;
  margin-right: 24rpx;
  border-radius: 12rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.address, .name {
  font-size: 32rpx;
  color: #333333;
}

.explain {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666666;
}

.type, .des {
  font-size: 28rpx;
  color: #666666;
}