

<view class="model">
  <view class="item">
    <view class="label">姓名</view>
    <input
        class="input-val"
        type="text"
        placeholder="请输入姓名"
        placeholder-class="pl-input-val"
        data-type="employeename"
        bindinput="onChanageInput"
      />
  </view>
  <view class="item">
    <view class="label">手机号</view>
    <input
        class="input-val"
        type="text"
        placeholder="请输入手机号"
        placeholder-class="pl-input-val"
        data-type="phone"
        value="{{phone}}"
        bindinput="onChanageInput"
        disabled
      />
  </view>
</view>

<view class="model">
  <view class="item column-item">
    <view class="label">申请理由</view>
    <textarea
        class="comments-content"
        placeholder="请输入申请理由"
        placeholder-class="pl-input-val"
        data-type="comments"
        bindinput="onChanageInput"
      ></textarea>
  </view>
</view>

<view class="btn" bind:tap="joinCompany">申请加入</view>