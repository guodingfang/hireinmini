/* pages/add-product/add-product.wxss */
@import "../../common/css/issuelist.wxss";

/*图片上传*/

.weui-uploader__bd {
    margin-bottom: -4rpx;
    margin-right: -9rpx;
    padding-top: 15rpx;
}

.weui-uploader__files {
    position: absolute;
}

.weui-uploader__input-box {
    display: inline-block;
    width: 150rpx;
    height: 150rpx;
    margin: 0 25rpx 20rpx 0;
}

.width100 {
    width: 100%;
}

.weui-label {
    font-size: 33rpx;
}

.color-red {
    color: #d43d3d;
}

.weui-uploader__input {
    width: 100%;
    height: 100%;
    opacity: 0;
}

.weui-cell {
    padding: 0;
}

.weui-uploader__file {
    position: relative;
    display: inline-block;
    margin-right: 24rpx;
    margin-bottom: 17rpx;
    z-index: 99;
}

.fechar {
    position: absolute;
    right: -9rpx;
    top: -10rpx;
    padding: 5rpx;
    display: inline-block;
    font-size: 24rpx;
}

.weui-uploader__img {
    display: block;
    width: 150rpx;
    height: 150rpx;
}

/*图片上传*/

.se-name {
    font-size: 32rpx;
    line-height: 50rpx;
}

.se-box {
    padding: 30rpx 35rpx 0 35rpx;
    background: #fff;
}

.text {
    margin-top: 20rpx;
    border: 1px solid #ececec;
    width: 93%;
    padding: 20rpx;
    height: 100rpx;
    overflow: hidden;
    display: block;
    font-size: 32rpx;
    border-radius: 6rpx;
}

.se-border {
    padding-bottom: 30rpx;
}

.se-top {
    margin-top: 25rpx;
}

.se-btn {
    text-align: center;
    line-height: 90rpx;
    background: #2ab7ff;
    color: #fff;
    margin-top: 40rpx;
    width: 96%;
    margin-left: 2%;
    border-radius: 8rpx;
    font-size: 32rpx;
    position: absolute;
    bottom: 20rpx;
}

.name-input {
    display: inline-block;
    width: 100%;
    vertical-align: middle;
    height: 100rpx;
    line-height: 100rpx;
}

.vi-row {
    background: #fff;
    line-height: 100rpx;
    font-size: 32rpx;
    padding: 0 35rpx;
}

.vi-row view {
    display: inline-block;
}

.returnindex{
    width: 76rpx;
    height: 76rpx;
    background:rgba(0, 0, 0, 0.7);
    top: 64%;
    right: 20rpx;
    border-radius:50rpx;
    position: fixed;
    z-index:200;   
}    
.returnindexpic{
    width: 38rpx;
    height: 38rpx;
