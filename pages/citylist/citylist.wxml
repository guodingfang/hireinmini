<view class="searchLetter touchClass">
    <view class="thishotText" bindtap="hotCity">
        <view style="margin-top:0;">当前</view>
        <view style="margin-top:0;">热门</view>
    </view>
    <view wx:for="{{searchLetter}}" style="color:#2ab4ff;font-size:20rpx;" wx:key="index" data-letter="{{item.name}}" catchtouchend="clickLetter">{{item.name}}</view>
</view>
<block wx:if="{{isShowLetter}}">
    <view class="showSlectedLetter">
        {{showLetter}}
    </view>
</block>
<scroll-view scroll-y="true" style="height:{{winHeight}}px" bindscroll="bindScroll" scroll-into-view="{{scrollTopId}}" scroll-top="{{scrollTop}}">
    <view class="hotcity-common thisCity" wx:if='{{rurl == "index"}}'>当前选择城市</view>
    <view class="thisCityName" wx:if='{{rurl == "index"}}'>{{city}}</view>
    <view wx:if='{{history != ""}}'>
        <view class="hotcity hotcity-common">历史城市</view>
        <view class="weui-grids">
            <block wx:for-items="{{history}}" wx:key="{{index}}">
                <view class="weui-grid" data-cityCode="{{item.citycode}}" data-cityname="{{item.cityname}}" data-portname="{{item.portname}}" bindtap="retIndex">
                    <view class="weui-grid__label">{{item.cityname}}</view>
                </view>
            </block>
            <view class="weui-grid" data-cityCode="0" wx:if='{{rurl == "lease"}}' data-cityname="全国" bindtap="retIndex">
                <view class="weui-grid__label">全国</view>
            </view>
        </view>
    </view>
    <view>
        <view class="hotcity hotcity-common">热门城市</view>
        <view class="weui-grids">
            <block wx:for-items="{{hotcityList}}" wx:key="{{index}}">
                <view class="weui-grid" data-cityCode="{{item.citycode}}" data-citytype="{{item.citytype}}" data-portid="{{item.portid}}" data-cityname="{{item.cityname}}" data-portname="{{item.portname}}" bindtap="retIndex">
                    <view class="weui-grid__label">{{item.cityname}}</view>
                </view>
            </block>
        </view>
    </view>
    <view class="selection" wx:for="{{cityList}}" wx:key="{{item.initial}}">
        <view class="item_letter" id="{{item.initial}}">{{item.initial}}</view>
        <view class="item_city" wx:for="{{item.cityInfo}}" wx:for-item="ct" data-cityCode="{{ct.citycode}}" data-citytype="{{ct.citytype}}" data-portid="{{ct.portid}}" data-cityname="{{ct.cityname}}" data-portname="{{ct.portname}}" bindtap="retIndex" wx:key="item0">
            {{ct.cityname}}
        </view>
    </view>
</scroll-view>

<loading hidden="{{loadingHidden}}">
    加载中...
</loading>