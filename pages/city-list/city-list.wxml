<view class="letter-list" bind:tap="onSelectLetter">
  <view class="letter-item" data-letter="current">当前</view>
  <view class="letter-item" data-letter="hot">热门</view>
  <view
    class="letter-item"
    wx:for="{{searchLetter}}"
    wx:for-item="letter"
    wx:key="letter"
    data-letter="{{letter}}"
  >
    {{letter}}
  </view>
</view>

<scroll-view
  class="city-list"
  scroll-into-view="{{selectLetter}}"
  scroll-with-animation
  scroll-y
>
  <view id="current">
    <view class="title">定位 / 最近访问</view>
    <view class="city-history">
      <view
        class="current-item"
        catch:tap="onAginLocation"
      >
        <image class="icon-location" src="/images/icon/location-3.png"></image>
        <text>{{currentCity.city || '重新定位'}}</text>
      </view>
      <view
        class="history-item"
        wx:for="{{hitoryList}}"
        wx:for-item="city"
        wx:key="citycode"
        data-item="{{city}}"
        catch:tap="onSelectCity"
      >
        {{city.cityname}}
      </view>
    </view>
  </view>

  <view id="hot" wx:if="{{hotlist.length}}">
    <view class="title">热门城市</view>
    <view class="city-hot">
      <view
        class="hot-item"
        wx:for="{{hotlist}}"
        wx:for-item="city"
        wx:key="citycode"
        data-item="{{city}}"
        catch:tap="onSelectCity"
      >
        {{city.cityname}}
      </view>
    </view>
  </view>


  <view
    wx:for="{{cityList}}"
    wx:for-item="content"
    wx:key="letter"
    class="city-classify"
    id="{{content.letter}}"
    catch:tap="onSelectCity"
  >
    <view class="title">{{content.letter}}</view>
    <view
      class="city-item"
      wx:for="{{content.list}}"
      wx:for-item="city"
      wx:key="citycode"
      data-item="{{city}}"
    >
      <view data-item="{{city}}">{{city.cityname}}</view>
    </view>
  </view>
</scroll-view>

