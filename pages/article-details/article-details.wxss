.details,
.comment-list {
  margin: 12rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.comment-list {
  margin: 30rpx 12rpx;
}

.comment-header {
  height: 80rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  padding: 30rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.comment-item {
  margin-bottom: 10rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.more-comment {
  height: 80rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.not-content-text {
	display: flex;
	align-items: center;
	justify-content: center;
	color: #aaaaaa;
	margin-top: 24rpx;
}

.not-comment {
  background-color: #ffffff;
  padding: 30rpx;
  margin: 12rpx;
  border-radius: 12rpx;
  border-radius: 12rpx;
  overflow: hidden;
  color: #333333;
  font-size: 28rpx;
}