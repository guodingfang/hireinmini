@import "../lib/weui.wxss";

page {
    font-size: 30rpx;
}

.pad {
    padding: 0 25rpx;
}

.position-r {
    position: relative;
}

.title {
    margin: 15rpx 25rpx;
    color: #666;
}

.client-info {
    background: #fff;
}

.client-info.top-info {
    margin: 20rpx 0;
}

.client-info .img {
    position: absolute;
    top: 31rpx;
    right: 0;
    width: 20rpx;
    height: 34rpx;
}

.client-name {
    border-bottom: 1rpx solid #f0f0f0;
}

.remove-bottom {
    border: none;
}

.client-info .name {
    height: 100rpx;
    line-height: 100rpx;
    color: #333;
}

.client-info .names {
    padding: 20rpx 25rpx 0 0;
    margin-bottom: -10rpx;
    font-size: 30rpx;
}

.client-info .ps {
    padding-left: 26rpx;
    display: inline-block;
    font-size: 26rpx;
    color: #ccc;
}

.client-info .val {
    display: inline-block;
    width: 100%;
    vertical-align: middle;
    height: 100rpx;
    line-height: 100rpx;
}

.client-info .name-input {
    display: inline-block;
    width: 100%;
    vertical-align: middle;
    height: 100rpx;
    line-height: 100rpx;
}

.sel-public {
    display: inline-block;
    width: 100%;
}

.client-info .describe-contetn {
    padding: 20rpx;
    width: auto;
    height: 100rpx;
    border: 1rpx solid #f0f0f0;
}

.pad-fill-t20 {
    padding-top: 20rpx;
}

.pad-fill-t25 {
    padding-top: 25rpx;
}

.pad-fill-t100 {
    padding-top: 100rpx;
}

/*图片上传*/

.img-name {
    padding: 20rpx 25rpx 0 25rpx;
    margin-bottom: -10rpx;
    font-size: 30rpx;
}

.weui-cell {
    padding: 0 25rpx 20rpx 25rpx;
    padding-bottom: 24rpx;
}

.weui-cell:before {
    border: none;
}

.weui-uploader__bd {
    padding-top: 20rpx;
}

.weui-uploader__input-box {
    margin-bottom: 0;
    display: inline-block;
    width: 150rpx;
    height: 150rpx;
    border: none;
    background: #f0f0f0;
}

.width100 {
    width: 100%;
}

.weui-label {
    font-size: 33rpx;
}

.color-red {
    color: #d43d3d;
}

.weui-uploader__input {
    width: 100%;
    height: 100%;
    opacity: 0;
}

.weui-uploader__file {
    position: relative;
    display: inline-block;
    margin-right: 24rpx;
    margin-bottom: 17rpx;
}

.fechar {
    position: absolute;
    right: -9rpx;
    top: -10rpx;
    padding: 5rpx;
    display: inline-block;
    font-size: 24rpx;
}

.weui-uploader__img {
    display: block;
    width: 150rpx;
    height: 150rpx;
}

.weui-cells {
    margin: 0;
}

.weui-cells:after, .weui-cells:before {
    border: none;
}

.icon-delpic {
    width: 40rpx;
    height: 40rpx;
}

